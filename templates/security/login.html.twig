{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block opengraph %}
<style>
a.login-image img{filter: invert(49%) sepia(98%) saturate(1883%) hue-rotate(202deg) brightness(108%) contrast(101%);}
a.login-image img:hover{filter: invert(49%) sepia(98%) saturate(1883%) hue-rotate(202deg) brightness(158%) contrast(101%);}
a.login-link:hover{color:#7ce5ff;}
</style>
{% endblock %}
{% block body %}
	<div style="padding-top:50px;">{% trans %}You're about to access the administration pages. If you don't know what this is about, you're in the wrong place.{% endtrans %}
		<br>{% trans %}Click{% endtrans %}&nbsp;<a class="login-link" href="{{ path('app_homepage') }}">{{'this link'|trans}}</a>&nbsp;{% trans %}to return to the main page.{% endtrans %}
		<small><br>{% trans %}P.S: if you want to contribute to a board page, click here -> {% endtrans %}</small>
		<a class="login-image" href="https://discord.gg/HWWH7hsk2p">
			<img src="{{ absolute_url(asset('build/icons/nav/discord.svg')) }}" height="32" alt="discord" style="vertical-align:middle;">
		</a>
	</div>
	<div style="display:flex;flex-direction:row;flex-wrap:wrap;align-items:center;justify-content:center;margin-top:50px;">
		<img src="{{ absolute_url(asset('build/icons/admin/keys.svg')) }}" alt="" width="128">
		{% if app.user %}You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>{% else %}
		<form method="post">
						<table>
							<tr>
								<td colspan="2">
									<h2>{% trans %}Please login{% endtrans %}</h2>
								</td>
							</tr>
							<tr>
								<td>
									<label for="inputUsername">{% trans %}Username{% endtrans %}</label>
								</td>
								<td><input type="text" value="{{ last_username }}" name="username" id="inputUsername"></td>
							</tr>
							<tr>
								<td>
									<label for="inputPassword">{% trans %}Password{% endtrans %}</label>
								</td>
								<td><input type="password" name="password" id="inputPassword">
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"></td>
							</tr>
							<tr>
								<td>
									<label><input type="checkbox" name="_remember_me">
										{% trans %}Remember me{% endtrans %}</label>
								</td>
								<td>
									<button style="margin-top:10px;float:right;" type="submit">{% trans %}Login{% endtrans %}</button>
								</td>
							</tr>
						</table>
		</form>
		{% endif %}
		
	</div>
	{% if error %}<span>{{ error.messageKey|trans(error.messageData, 'security') }}<span>{% endif %}
{% endblock %}
