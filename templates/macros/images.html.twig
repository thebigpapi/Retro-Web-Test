<div class="show-image">
	<a href="{{ vich_uploader_asset(image, 'imageFile')}}" class="glightbox" data-description="
	{% if type == "chipset" %}{{ chipPart.getFullName() }}{% endif %}{% if image.creditor %}<div style='float:right;'><div>{% if image.creditor.website %}<a class=creditor-href href={{ image.creditor.website }}>{{'Image by'|trans}}&nbsp;{{image.creditor.name}}</a>
	{% else %}{{'Image by'|trans}}&nbsp;{{ image.creditor.name }}{% endif %}</div><div>{% if image.license.getId() == 1 %}<a class=license-href href=https://creativecommons.org/licenses/by-sa/4.0/>
	<img src={{ absolute_url(asset('build/icons/show/cc.svg')) }} width=16 height=16> CC BY-SA 4.0</a>{% endif %}</div></div>{% endif %}
	{% if image.description %}<p>Notes: {{ image.description }}</p>{% endif %}">
    {% if type == "motherboard" %}
		<img src="{% if vich_uploader_asset(image, 'imageFile') | ext != "svg" %}{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('motherboard_show_thumb') }}{% else %}{{ vich_uploader_asset(image, 'imageFile')}}{% endif %}"
		width="640" height="480" alt="image{{index}}" title="{% if image.description %}{{ image.description }}{% endif %}">
    {% else %}
        <img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('motherboard_show_thumb') }}"
        width="640" height="480" alt="image{{index}}" title="{% if image.description %}{{ image.description }}{% endif %}">
    {% endif %}
		Image {{ index }} of {{ length }}
	</a>
</div>