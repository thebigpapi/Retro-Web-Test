<div class="scroll-div">
	<img src="{{ absolute_url(asset('build/icons/show/hardware.gif')) }}" alt="" style="vertical-align: middle;padding-bottom: 10px;">
	<b>Drivers:</b>
    <span>{{ entity.count() }} driver{% if entity.count() != 1 %}s{% endif %} available</span>
    {% if entity is not empty %}
    <table>
        <tr>
            <th>Name</th>
            <th>Version</th>
            <th>OS support</th>
            <th>Size</th>
            <th>Filename</th>
        </tr>
        {% for driver in entity %}
        <tr class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
            <td><a href="{{ path("driver_show", {id: driver.largeFile.getId()}) }}">{{driver.largeFile.getName()}}</a></td>
            <td>{{ driver.largeFile.getFileVersion() ? driver.largeFile.getFileVersion() : '<i>unknown</i>' }}</td>
            <td>
                <div class="tag-container">
                {% for os in driver.largeFile.getOsFlags()|sort((a, b) => a.getName <=> b.getName)|sort((a, b) => a.getVersion <=> b.getVersion) %}
                    {{os.getName()}}{% if not loop.last %}, {% endif %}
                {% endfor %}
                </div>
            </td>
            <td>{{driver.largeFile.getSize() ? driver.largeFile.getSizeFormatted() : "<i>unknown</i>" }}</td>
            <td>
                <a class="combo" href="{{ vich_uploader_asset(driver.largeFile, 'file')}}">
                    <img src="{{ absolute_url(asset('build/icons/dw.gif')) }}" alt="" width="16">
                    <span>{{ driver.largeFile.getFileNameSimple() }}</span>
                </a>
            </td>
        </tr>
        {% endfor %}
    </table>
    {% endif %}
</div>