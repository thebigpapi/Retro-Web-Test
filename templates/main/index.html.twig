{% extends 'base.html.twig' %}
{% block metatags %}
	<meta name="description" content="The ultimate retro motherboard database, here you can find board photos, BIOS images, manuals and more!">
{% endblock %}

{% block body %}
	<h2 class="title">{% trans %}Where do you want to go today?{% endtrans %}</h2>
	{% if userAgent == 0 or userAgent > 5 %}
	<div class="index-buttons" style="text-align:center;">
		<a href="{{ path("motherboard_search") }}" class="index-button0">
			<span class="s1" style="display:inline-block;"><img src="{{ absolute_url(asset('assets/images/index/motherboard_low.gif')) }}" alt="find card"></span>
			<span style="display:inline-block;">{% trans %}Search for a motherboard{% endtrans %} <br>({{moboCount}} {% trans %}entries{% endtrans %})</span>
		</a>
		<a href="#" class="index-button1">
			<span class="s1" style="display:inline-block;"><img src="{{ absolute_url(asset('assets/images/index/card_low.gif')) }}" alt="find card"></span>
			<span style="display:inline-block;">{% trans %}Find an expansion card{% endtrans %}<br> [WIP]</span>
		</a>
		<a href="{{ path("bios_search") }}" class="index-button2">
			<span class="s1" style="display:inline-block;"><img src="{{ absolute_url(asset('assets/images/index/awchip_low.gif')) }}" alt="find BIOS"></span>
			<span style="display:inline-block;">{% trans %}Find a BIOS image{% endtrans %} <br>({{biosCount}} {% trans %}files{% endtrans %})</span>
		</a>
	</div>
	{% else %}
	<form action="./" class="index-buttons" method="get">
		<div class="main">
			<input type="submit" class="button1" name="motherboard" value="{% trans %}Search for a motherboard{% endtrans %}&#13;&#10;({{moboCount}} {% trans %}entries{% endtrans %})">
			<input type="submit" class="button2" name="expansion" value="{% trans %}Find an expansion card{% endtrans %}&#13;&#10;[WIP]" disabled="disabled">
			<input type="submit" class="button3" name="bios" value="{% trans %}Find a BIOS image{% endtrans %}&#13;&#10;({{biosCount}} {% trans %}files{% endtrans %})">
		</div>
	</form>
	{% endif %}
	<div class="perks">
		<p><b>{% trans %}Recently added or updated boards:{% endtrans %}</b></p>
		<div class="results">
			<ul>
        	{% for motherboard in latestMotherboards %}
				<li><a href="{{ path("motherboard_show", {id:motherboard.getId()}) }}">{{ motherboard.getManufacturerShortNameIfExist() }}&nbsp;{{ motherboard.name }}</a></li>		
			{% endfor %}
			
			</ul>
		</div>
	</div>
{% endblock %}