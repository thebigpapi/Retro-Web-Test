{% extends 'base.html.twig' %}
{% block metatags %}
	<meta name="description" content="The ultimate retro motherboard database, here you can find board photos, BIOS images, manuals and more!">
{% endblock %}

{% block body %}
	<h2 class="title">{% trans %}Where do you want to go today?{% endtrans %}</h2>
	<div class="index-buttons" style="text-align:center;">
		<a href="./motherboard/search/" alt="Search motherboard" class="index-button0">
			<img src="{{ root }}/assets/images/index/motherboard_low.jpg">
			<p>Search for a motherboard</p>
		</a>
		<a href="#" alt="" class="index-button1">
			<img src="{{ root }}/assets/images/index/card_low.jpg">
			<p>{% trans %}Find an expansion card{% endtrans %} [WIP]</p>
		</a>
		<a href="./bios/search" alt="" class="index-button2">
			<img src="{{ root }}/assets/images/index/awchip_low.jpg">
			<p>{% trans %}Find a BIOS image{% endtrans %}</p>
		</a>
	</div>
	<div class="perks">
		<p><b>{% trans %}Boards in the database: {% endtrans %} {{moboCount}}</b></p>
		<p><b>{% trans %}Recently added or updated boards:{% endtrans %}</b></p>
		<div class="results">
			<ul>
        	{% for motherboard in latestMotherboards %}
				<li><a href="./motherboard/show/{{ motherboard.getId() }}">{{ motherboard.getManufacturerShortNameIfExist() }}&nbsp;{{ motherboard.name }}</a></li>		
			{% endfor %}
			
			</ul>
		</div>
	</div>
	
	
{% endblock %}