{% extends 'base.html.twig' %}
{% block metatags %}
	<meta name="description" content="The ultimate retro motherboard database, here you can find board photos, BIOS images, manuals and more!">
{% endblock %}

{% block body %}<div class="title"><b>{% trans %}Where do you want to go today?{% endtrans %}</b></div>
	<div class="index-buttons">
		<span class="margin-fix"><a href="{{ path("motherboard_search") }}" class="index-button0"><span class="image-block"><span>
			<span class="img"></span>
			<span>{% trans %}Search for a motherboard{% endtrans %}</span> <span>({{moboCount}} {% trans %}entries{% endtrans %})</span><!--
		--></span></span></a></span>
		<span class="margin-fix"><a name="under construction" class="index-button1"><span class="image-block"><span>
			<span class="img"></span>
			<span>{% trans %}Find an expansion card{% endtrans %}</span> <span>[WIP]</span><!--
		--></span></span></a></span>
		<span class="margin-fix"><a href="{{ path("bios_search") }}" class="index-button2"><span class="image-block"><span>
			<span class="img"></span>
			<span>{% trans %}Find a BIOS image{% endtrans %}</span> <span>({{biosCount}} {% trans %}files{% endtrans %})</span><!--
		--></span></span></a></span>
	</div>
	<div class="perks">
		<p><b>{% trans %}Recently added or updated boards:{% endtrans %}</b></p>
		<div class="results">
			<ul>
        	{% for motherboard in latestMotherboards %}
				<li><a href="{{ path("motherboard_show", {id:motherboard.getId()}) }}">{{ motherboard.getManufacturerShortNameIfExist() }}&nbsp;{{ motherboard.name }}</a></li>	
			{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}