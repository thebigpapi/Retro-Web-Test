{% extends 'base.html.twig' %}

{% block title %}Info - The Retro Web{% endblock %}
{% block subnav %}
<li class="flex navbar-li">
    <div class="flex items-center">
        <svg class="navbar-svg" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z"></path>
        </svg>
        <a class="ml-4" href="{{ path('app_info') }}">
			<img src="{{ absolute_url(asset('build/icons/about.svg')) }}" width="32" height="32" alt="info">
            <code class="text-pink-500">Info</code>
        </a>
    </div>
</li>
{% endblock %}
{% block body %}
	<div class="title">Info</div>
	<div class="index-buttons">
		<a href="{{ path('app_credits') }}">
			<img src="{{ absolute_url(asset('build/icons/about.svg')) }}" alt="about">
			<div>About us</div>
		</a>
		<a href="{{ path('app_contributions') }}">
			<img src="{{ absolute_url(asset('build/icons/manual.svg')) }}" alt="contrib">
			<div>Contributions</div>
		</a>
		<a href="{{ path('app_legal') }}">
			<img src="{{ absolute_url(asset('build/icons/miscfile.svg')) }}" alt="legal">
			<div>Legal disclaimer</div>
		</a>
	</div>
{% endblock %}
