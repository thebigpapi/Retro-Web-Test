{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block checkbox_widget %}
	{% set type = type|default('checkbox') %}
	<input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %} value="{{ value }}" {% endif %}>
{% endblock %}

{% block hidden_widget %}
	{% set type = type|default('hidden') %}
	<input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %} value="{{ value }}" {% endif %}>
{% endblock %}

{% block title %}
	{% trans %}Search for a bios{% endtrans %}
{% endblock %}

{% block metatags %}
	<meta name="description" content="{% trans %}Search for a motherboard BIOS by POST string, chipset, manufacturer, and more.{% endtrans %}">
{% endblock %}

{% block body %}
	<div class="title">
		<b>{% trans %}Search for a bios{% endtrans %}</b>
	</div>
	<p>
		<a href="{{path("bios_info")}}">{% trans %}Where can I find the POST string?{% endtrans %}</a>
	</p>
	<div id="hiddenDiv" style="display: none;"></div>
	{{ form_start(form, {'method': 'POST', 'name': 'search', 'action':path("bios_search"), 'attr':{'data-controller':'search'}}) }}
	<fieldset id="search-fieldset">
		<h3>{% trans %}Search for a bios{% endtrans %}</h3>
		<section>
			<div class="search-nav">
				<a class="snav" onclick="document.getElementById('rst-btn').click();return false;">
					<img src="{{ absolute_url(asset('build/icons/search/reset.svg')) }}" alt="" width="24">{% trans %}Reset fields{% endtrans %}</a>
				<a class="snav" onclick="document.getElementById('search_search').click();return false;">
					<img src="{{ absolute_url(asset('build/icons/search/search.svg')) }}" alt="" width="24">{% trans %}Search{% endtrans %}</a>
				<input id="rst-btn" type="reset" value="reset" style="display:none;" data-action="click->search#reset" data-reset-ids="search_chipsetManufacturer">
				{{ form_row(form.search)|replace({'<div><button': '<input style="display:none;"', '</button></div>': '">', '>': ' value="'})|raw }}
			</div>
		</section>
		<section>
			<div>
				<label for="search_manufacturer">{% trans %}Manufacturer{% endtrans %}</label>
				<span class="help-t">
					<img src="{{ absolute_url(asset('build/icons/search/help.svg')) }}" alt="" title="{{ 'This is the BIOS manufacturer (e.g: AMI, Award, Phoenix)'|trans|e('html') }}" width="16" height="16">
					<span class="img"></span>
					<span class="text">{% trans %}This is the BIOS manufacturer (e.g: AMI, Award, Phoenix){% endtrans %}</span>
				</span>
				{{ form_widget(form.manufacturer, {'attr': {'class': 'sform'}}) }}
			</div>
			<div>
				<label for="search_chipset">{% trans %}Chipset{% endtrans %}</label>
				<span class="help-t">
					<img src="{{ absolute_url(asset('build/icons/search/help.svg')) }}" alt="" title="{{ 'Select a manufacturer from the first field, then pick the part number from the second field'|trans|e('html') }}" width="16" height="16">
					<span class="img"></span>
					<span class="text">{% trans %}Select a manufacturer from the first field, then pick the part number from the second field{% endtrans %}</span>
				</span>
				<div class="sadv">
					<div id="setchip1">{{ form_widget(form.chipsetManufacturer, {'attr': {'class': 'sform', 'data-action': "change->search#search", 'data-target-id': 'search_chipset'}}) }}</div>
					<div class="sform1">
						<span id="setchip-lb"></span>
						<span id="setchip2">{{ form_widget(form.chipset) }}</span>
					</div>
				</div>
			</div>
			<div>
				<label for="search_post_string">{% trans %}POST string{% endtrans %}</label>
				{{ form_widget(form.post_string, {'attr': {'class': 'sform', 'size':'50'}}) }}
			</div>
			<div>
				<label for="search_core_version">{% trans %}Core version{% endtrans %}</label>
				<span class="help-t">
					<img src="{{ absolute_url(asset('build/icons/search/help.svg')) }}" alt="" title="{{ "This is the version of the BIOS's core (e.g. 4.51pg)"|trans|e('html') }}" width="16" height="16">
					<span class="img"></span>
					<span class="text">{% trans %}This is the version of the BIOS's core (e.g. 4.51pg){% endtrans %}</span>
				</span>
				{{ form_widget(form.core_version, {'attr': {'class': 'sform', 'style': 'width:15%', 'size': '50'}}) }}
			</div>
			<div>
				<label for="search_file_present">{% trans %}Show results with files{% endtrans %}</label>
				<span class="help-t">
					<img src="{{ absolute_url(asset('build/icons/search/help.svg')) }}" alt="" title="{{ 'If checked, only BIOS entries with files attached will be shown'|trans|e('html') }}" width="16" height="16">
					<span class="img"></span>
					<span class="text">{% trans %}If checked, only BIOS entries with files attached will be shown{% endtrans %}</span>
				</span>
				<div class="sform2">{{ form_widget(form.file_present, {'attr': {'style': 'width:25px;height:25px'}}) }}</div>
			</div>
		</section>
	</fieldset>
	<div>{{ form_rest(form) }}</div>

</form>{% endblock %}
