{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Advanced BIOS Info{% endtrans %}
{% endblock %}

{% block metatags %}
	<meta name="description" content="Advanced BIOS info(AMI/Award manufacturer codes), Award chipset IDs">
	{% for locale in locales | split('|')|filter(locale => locale != "en") %}
		<link rel="alternate" hreflang="{{ locale }}" href="{{ absolute_url(path('bios_infoadv', {_locale: locale})) }}"/>
	{% endfor %}
	<link rel="alternate" hreflang="x-default" href="{{ absolute_url(path('bios_infoadv', {_locale: 'en'})) }}"/>
{% endblock %}

{% block body %}
	<div class="title">{% trans %}Where can I find the POST string?{% endtrans %}</div>
	{% for manufacturer, codes in biosCodes %}
	<div class="grid-list">
		<p><b>{{manufacturer}} BIOS manufacturer IDs</b></p>
		<ul>
			{% for code in codes %}
				<li>
					{{ code[1] }}:
					{{ code[0] }}
				</li>
			{% endfor %}
		</ul>
	</div>
	{% endfor %}
	{% for manufacturer, codes in chipCodes %}
	<div class="grid-list2">
		<p><b>{{manufacturer}} chipset IDs</b></p>
		<ul>
			{% for code in codes %}
				<li>
					{{ code[1] }}:
					{{ code[0] }}
				</li>
			{% endfor %}
		</ul>
	</div>
	{% endfor %}
{% endblock %}
