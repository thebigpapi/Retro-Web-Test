{% extends 'base.html.twig' %}

{% block title %}I/O ports - TRW{% endblock %}

{% block metatags %}
	<meta name="description" content="Look up all the I/O ports.">
	<link rel="alternate" hreflang="x-default" href="{{ absolute_url(path('io_port_index')) }}"/>
{% endblock %}


{% block subnav %}
<li class="flex navbar-li">
    <div class="flex items-center">
        <svg class="navbar-svg" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z"></path>
        </svg>
        <a class="ml-4" href="{{ path('io_port_index') }}">
			<img src="{{ absolute_url(asset('build/icons/rs232.svg')) }}" width="32" height="32" alt="port">
            <code class="text-pink-500">I/O ports</code>
        </a>
    </div>
</li>
{% endblock %}
{% block body %}
<div class="title">
    <img src="{{ absolute_url(asset('build/icons/rs232.svg')) }}" alt="port" width="32" height="32">
    I/O ports
</div>
{{ knp_pagination_render(io_ports, 'macros/pagination.html.twig') }}
<div class="perks">
    <div id="index-datetime" class="perks-list small">
    {% for port in io_ports %}
        <div class="perk">
            <a href="{{ path("io_port_show", {id: port.getId()}) }}">
                <div class="perk-image">
                {% if port.getEntityImages() is not empty %}
                    {% for image in port.getEntityImages()|sort((a, b) => a.getFileName() <=> b.getFileName())|slice(0, 1) %}
                        <img src="{% if vich_uploader_asset(image, 'imageFile') | ext != "svg" %}
                        {{ vich_uploader_asset(image, 'imageFile') | imagine_filter('show_thumb') }}{% else %}
                        {{ vich_uploader_asset(image, 'imageFile')}}{% endif %}" alt="" loading="lazy" width="250" height="200" title="{% if image.description %}{{ image.description }}{% endif %}">
                    {% endfor %}
                {% else %}
                    <img src="{{ absolute_url(asset('build/images/missing/not-available.jpg')) }}" loading="lazy" width="250" height="200" title="no images available :(">
                {% endif %}
                </div>
                <div class="perk-name">{{ port.getName() }}</div>
            </a>
        </div>
    {% endfor %}
    </div>
</div>
{% if io_ports|length > 12 %}
    {{ knp_pagination_render(io_ports, 'macros/pagination.html.twig') }}
{% endif %}
{% endblock %}