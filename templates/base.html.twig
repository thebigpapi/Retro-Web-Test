{# templates/base.html.twig #}
<!DOCTYPE HTML>
<html dir="auto" lang="en" class="html">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1"> 
		{% block metatags %}
		{% endblock %}
		<title>{% block title %}{% endblock %}</title>
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png; charset=utf-8" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png; charset=utf-8" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
		<meta name="msapplication-TileColor" content="#da532c">
		<meta name="theme-color" content="#ffffff">
		{% block opengraph %}
			<meta property="og:site_name" content="The Retro Web">
			<meta property="og:type" content="website">
			<meta property="og:title" content="The Retro Web">
			<meta property="og:description" content="The Retro Web hardware database">
			<meta property="og:url" content="http://theretroweb.com/">
			<meta property="og:image" content="{{ absolute_url(asset('build/images/logo.webp')) }}">
			<meta name="twitter:card" content="summary">
			<meta name="twitter:title" content="The Retro Web">
            <meta name="twitter:description" content="The Retro Web hardware database">
            <meta name="twitter:image" content="{{ absolute_url(asset('build/images/logo.webp')) }}">
		{% endblock %}
		{% block stylesheets %}
			<link href="/build/css/glightbox.min.css" rel="stylesheet">
			{{ encore_entry_link_tags('main') }}
		{% endblock %}
		{% block extra_stylesheets %}
		{% endblock %}
		{% block javascripts %}
			<script src="/build/js/tom-select.js" defer></script>
			<script type="module">import '/build/js/glightbox.min.js';const lightbox = GLightbox({});</script>
			{{ encore_entry_script_tags('main') }}
		{% endblock %}
	</head>
	<body class="content body">
		<header class="trw-header">
			<div class="page-header">
				<nav class="navbar-primary navbar-logo">
					<a href="{{ path('app_homepage') }}" title="Go to homepage">
						{% if "now"|date("m") == 12 %}
							<img src="{{ absolute_url(asset('build/images/trw_christmas.png')) }}" width="40" height="40" alt="logo">
						{% else %}
							<img src="{{ absolute_url(asset('build/images/icon.png')) }}" width="40" height="40" alt="logo">
						{% endif %}
						<span class="navbar-icon-label">The Retro Web</span>
					</a>
				</nav>
				<nav class="navbar-primary navbar-links">
					<a href="{{ path('app_support') }}" class="nav-link">
						<img src="{{ absolute_url(asset('build/icons/support.svg')) }}" width="24" height="24" alt="art">
						<span class="navbar-label">Support Us</span>
					</a>
					<a href="https://blog.theretroweb.com" class="nav-link">
						<img src="{{ absolute_url(asset('build/icons/articles.svg')) }}" width="24" height="24" alt="art">
						<span class="navbar-label">Articles</span>
					</a>
					{% if is_granted('ROLE_USER') %}
						<a href="{{ path('dashboard') }}" class="nav-link">
							<img src="{{ absolute_url(asset('build/icons/settings.svg')) }}" width="24" height="24" alt="admin">
							<span class="navbar-label">Admin</span>
						</a>
						<a href="{{ path('app_logout') }}" class="nav-link">
							<img src="{{ absolute_url(asset('build/icons/login.svg')) }}" width="24" height="24" alt="logout">
							<span class="navbar-label"></span>
						</a>
					{% else %}
						<a href="{{ path('app_login') }}" class="nav-link">
							<img src="{{ absolute_url(asset('build/icons/login.svg')) }}" width="24" height="24" alt="login">
							<span class="navbar-label"></span>
						</a>
					{% endif %}
				</nav>
			</div>
		</header>
		{% if "now"|date("m") == 12 %}
			<div style="background: url('/build/images/lights.png') repeat-x;width:100%;background-size: 160px 20px;color:#191919">.</div>
		{% endif %}
		<label class="hamburger-menu">
			<input type="checkbox" />
		</label>
		<aside class="hamburger-sidebar">
			<nav class="hamburger-sidebar-contents">
				<a href="{{ path('mobosearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/motherboard.svg')) }}" width="32" height="32" alt="mobo">
					<span class="navbar-label">Motherboards</span>
				</a>
				<a href="{{ path('biossearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/awchip.svg')) }}" width="32" height="32" alt="bios">
					<span class="navbar-label">BIOS images</span>
				</a>
				<a href="{{ path('chipsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/chip.svg')) }}" width="32" height="32" alt="chip">
					<span class="navbar-label">Chips</span>
				</a>
				<a href="{{ path('chipsetsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/chipsetfull.svg')) }}" width="32" height="32" alt="chipset">
					<span class="navbar-label">Chipsets</span>
				</a>
				<a href="{{ path('expansioncardsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/card.svg')) }}" width="32" height="32" alt="card">
					<span class="navbar-label">Expansion cards</span>
				</a>
				<a href="{{ path('hddsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/harddrive.svg')) }}" width="32" height="32" alt="hdd">
					<span class="navbar-label">Hard drives</span>
				</a>
				<a href="{{ path('cddsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/cd_drive.svg')) }}" width="32" height="32" alt="cdd">
					<span class="navbar-label">Optical drives</span>
				</a>
				<a href="{{ path('fddsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/floppy_drive.svg')) }}" width="32" height="32" alt="fdd">
					<span class="navbar-label">Floppy &amp; tape drives</span>
				</a>
				<a href="{{ path('driversearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/hardware.svg')) }}" width="32" height="32" alt="driver">
					<span class="navbar-label">Drivers &amp; software</span>
				</a>

				<a href="{{ path('ioportsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/rs232.svg')) }}" width="32" height="32" alt="io">
					<span class="navbar-label">I/O ports</span>
				</a>
				<a href="{{ path('expansionslotsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/exp_slot.svg')) }}" width="32" height="32" alt="slot">
					<span class="navbar-label">Expansion slots</span>
				</a>
				<a href="{{ path('socketsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/socket.svg')) }}" width="32" height="32" alt="socket">
					<span class="navbar-label">Sockets</span>
				</a>
				<a href="{{ path('powerconnsearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/power.svg')) }}" width="32" height="32" alt="power">
					<span class="navbar-label">Power connectors</span>
				</a>
				<a href="{{ path('manufacturersearch') }}" class="nav-link">
					<img src="{{ absolute_url(asset('build/icons/factory.svg')) }}" width="32" height="32" alt="manuf">
					<span class="navbar-label">Manufacturers</span>
				</a>
			</nav>
		</aside>
		<div class="page-header">
			<nav class="navbar-secondary navbar-subcategories">
				<ol role="list" class="navbar-ol navbar-li flex">
				<li class="flex">
					<div class="flex">
						<a href="{{ path('app_homepage') }}">
							<!-- Heroicon name: solid/home -->
							<svg class="navbar-svg home" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
								<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
							</svg>
							<span>Home</span>
						</a>
					</div>
				</li>
				{% block subnav %}{% endblock %}
				</ol>
			</nav>
		</div>
		<main>
			<div class="page">
				{% set maintenance = get_env("MAINTENANCE_MODE")%}
				{% set time = get_env("MAINTENANCE_TIME")%}
				{% if maintenance == "planned" %}
					<div class="maintenance-notification-bar">
						<div>
							<strong>Scheduled Maintenance </strong>-
							TRW will be undergoing scheduled maintenance on {{ time }}. We apologize for any inconvenience.
						</div>
					</div>
				{% endif %}
				{% if maintenance == "active" %}
					<div class="maintenance-notification-bar">
						<div>
							<img src="{{ absolute_url(asset('build/icons/warning.svg')) }}" alt="warning" width="24" height="24" style="margin-top: -10px;vertical-align: bottom;">
							<strong>Ongoing Maintenance </strong>-
							TRW is undergoing scheduled maintenance for approximately {{ time }}. We apologize for any inconvenience.
						</div>
					</div>
				{% endif %}
				{% block body %}{% endblock %}
			</div>
		</main>
		<footer>
			<div>
				<div class="footer-links">
					<a href="{{ path('app_info') }}">
						<img src="{{ absolute_url(asset('build/icons/about.svg')) }}" width="16" height="16" alt="about">
						<span class="navbar-label">Info</span>
					</a>
					<a href="https://discord.gg/HWWH7hsk2p">
						<img src="{{ absolute_url(asset('build/icons/discord.svg')) }}" width="16" height="16" alt="discord">
						<span class="navbar-label">Join our Discord</span>
					</a>
					<a href="mailto:info@theretroweb.com">
						<img src="{{ absolute_url(asset('build/icons/email.svg')) }}" width="16" height="16" alt="email">
						<span class="navbar-label">Email us</span>
					</a>
					<a href="https://gitlab.com/ultimateretro/ultimateretro">
						<img src="{{ absolute_url(asset('build/icons/gitlab.svg')) }}" width="16" height="16" alt="gitlab">
						<span class="navbar-label">Our GitLab repo</span>
					</a>
				</div>
				<div class="footer-info">Designed by Deksor, computerguy096 and Zago. (c) 2019-{{ 'now'|date('Y') }} All wrongs reversed.</div>
			</div>
		</footer>
	</body>
</html>
