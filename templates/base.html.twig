{# templates/base.html.twig #}
<!DOCTYPE HTML>
<html dir="{{ 'dir.lang'|trans }}" lang="{{ 'user.lang'|trans }}">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1"> {% block metatags %}{% endblock %}
		<title>
			{% block title %}Ultimate Retro
			{% endblock %}
		</title>
		{#% if isRobot(app.request.headers.get('User-Agent')) %#}
		<meta property="og:type" content="website">
		<meta property="og:url" content="http://www.ultimateretro.net/">
		{% block opengraph %}
			<meta property="og:title" content="Ultimate Retro">
			<meta property="og:description" content="The ultimate retro motherboard database">
			<meta property="og:image" content="{{ absolute_url(asset('build/images/logo.webp')) }}">
		{% endblock %}
		{#% endif %#}
		{% block stylesheets %}
		{% if is_granted('ROLE_USER') %}
			{{ encore_entry_link_tags('admin_app') }}
		{% endif %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
		{% for locale in locales | split('|') %}
			<link rel="alternate" hreflang="{{ locale }}" href="{{ absolute_url(path('app_homepage', {_locale: locale})) }}"/>
		{% endfor %}
		<link rel="alternate" hreflang="x-default" href="{{ absolute_url(path('app_homepage', {_locale: 'en'})) }}"/>
	</head>
	<body class="content">
		<div class="navbar">
			<div class="navbar-inner">
				<a href="{{ path('app_homepage') }}">
					<b>Ultimate Retro
						<small>BETA</small>
					</b>
				</a>
				{% if is_granted('ROLE_USER') %}
					<a href="{{ path('app_logout') }}" class="nav-link">
						<img src="{{ absolute_url(asset('build/icons/nav/power.svg')) }}" height="24" alt="logout">
						<span class="navbar-label">{{'Logout'|trans}}</span>
					</a>
				{% else %}
					<a href="{{ path('app_login') }}" class="nav-link">
						<img src="{{ absolute_url(asset('build/icons/nav/power.svg')) }}" height="24" alt="login">
						<span class="navbar-label">{{'Login'|trans}}</span>
					</a>
				{% endif %}
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('admin_index') }}" class="nav-link">
						<img src="{{ absolute_url(asset('build/icons/nav/settings.svg')) }}" height="24" alt="admin">
						<span class="navbar-label">{{'Admin'|trans}}</span>
					</a>
				{% endif %}
				{#<span style="color:yellow">UNDER CONSTRUCTION, THINGS WILL BE BROKEN</span>#}
			</div>
		</div>

		<div class="main">
			<div class="page"> {% block body %}{% endblock %}
				</div>
				<footer class="footer">
					<div class="foot-container">
						<div class="foot-part">
							<div>
								<a href="{{ path('app_credits') }}">
									<img src="{{ absolute_url(asset('build/icons/nav/about.svg')) }}" height="16" alt="about">
									<span class="navbar-label">{{'About us'|trans}}</span>
								</a>
							</div>
							<div>
								<a href="https://discord.gg/HWWH7hsk2p">
									<img src="{{ absolute_url(asset('build/icons/nav/discord.svg')) }}" height="16" alt="discord">
									<span class="navbar-label">{{'Join our Discord'|trans}}</span>
								</a>
							</div>
						</div>
						<div class="foot-part">
							<div>
								<a href="#">
									<img src="{{ absolute_url(asset('build/icons/nav/email.svg')) }}" height="16" alt="email">
									<span class="navbar-label">{{'Email us(TBA)'|trans}}</span>
								</a>
							</div>
						</div>
						<div class="foot-part">
							<div style="width:20em;color:#FFFFFF;">{{'Designed by Deksor and computerguy08.'|trans}}<br>{{'(c) 2019-2021 All wrongs reversed.'|trans}}</div>
						</div>
					</div>
				</footer>
			</div>
		</body>
	</html>
