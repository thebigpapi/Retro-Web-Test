{# templates/base.html.twig #}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html dir="{{ 'dir.lang'|trans }}" lang="{{ 'user.lang'|trans }}">
	<head>{% set root = constant('app.path') %}
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		{% block metatags %}
		{% endblock %}
		<title>{% block title %}Ultimate Hardware 2019{% endblock %}</title>
		{% if isRobot(app.request.headers.get('User-Agent')) %}
			<meta property="og:type" content="website">
			<meta property="og:url" content="http://www.win3x.org/">
			{% block opengraph %}
				<meta property="og:title" content="Ultimate Hardware 2019" >
				<meta property="og:description" content="The ultimate retro motherboard database" >
				<meta property="og:image" content="{{ absolute_url(asset('assets/images/logo.gif')) }}" >
			{% endblock %}
		{% endif %}
		<link rel="stylesheet" media="all" type="text/css" href="{{ absolute_url(asset('assets/main.css')) }}">
		{% if css_for_admin is defined %}<link rel="stylesheet" media="all" type="text/css" href="{{ absolute_url(asset('assets/admin.css')) }}">{% endif %}
		<link rel="stylesheet" media="only screen" type="text/css" href="{{ absolute_url(asset('assets/modern.css')) }}">
		<!--[if lt IE 9]>
			<link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/iexplore.css')) }}">
		<![endif]-->
	</head>
	<body class="content">
		<form action="{{ path('change_page') }}" method="get"><div class="top-bar"><div class="table-mobile">
			<a href="{{ path('app_homepage') }}" style="text-decoration: none;">
				<b>Ultimate Hardware <small>2019 BETA</small></b>
			</a>
			<a href="{{ path('app_credits') }}" style="text-decoration:none;padding-left:5px;">
				<img src="{{ absolute_url(asset('assets/images/about.gif')) }}" align="top" alt="about">
			</a>
			<a href="/win3board" style="text-decoration:none;padding-left:5px;">
				<img src="{{ absolute_url(asset('assets/images/w3board.gif')) }}" align="top" alt="board" style="">
			</a>
			<span class="form" style="padding-left:5px;">
			<select class="lang" name="lang">
				{% for locale in locales %}<option{% if locale == 'user.lang'|trans %} selected="selected"{% endif %} value="{{ locale }}">{{ 'name.lang'|trans(locale=locale) }}</option>{% endfor %}
			</select>
			<input type="submit" value=" OK "></span>
			{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('admin_index') }}" style="text-decoration:none;padding-left:5px;">
				<img src="{{ absolute_url(asset('assets/images/settings.gif')) }}" align="top" alt="admin">
			</a>{% endif %}
			{% if is_granted('ROLE_USER') %}
			<a href="{{ path('app_logout') }}" style="text-decoration:none;padding-left:5px;">
				<img src="{{ absolute_url(asset('assets/images/logout.gif')) }}" align="top" alt="logout">
			</a>{% endif %}
		</div></div></form>
		<div class="main">
			<div class="page">
				{% block body %}{% endblock %}
			</div>
		</div>
	</body>
</html>