{% set images = field.formattedValue %}
{% if images is not iterable %}
    {% set images = [images] %}
{% endif %}

{% for image in images %}
    {% set html_id = 'ea-lightbox-' ~ field.uniqueId ~ '-' ~ loop.index %}
    <a href="#" class="ea-lightbox-thumbnail" data-ea-lightbox-content-selector="#{{ html_id }}">
        <img src="{{field.customOptions.get('thumb_link') ? field.customOptions.get('thumb_link') }}{{ asset(image) }}" class="img-fluid">
    </a>

    <div id="{{ html_id }}" class="ea-lightbox">
        <img src="{{field.customOptions.get('link') ? field.customOptions.get('link') }}{{ asset(image) }}">
    </div>
{% endfor %}
