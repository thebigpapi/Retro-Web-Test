    <div class="auditor-audits mb-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mx-4 sm:mx-0">
        {% for entity, table in audited %}
            <div class="bg-white overflow-hidden rounded border border-gray-200 hover:bg-blue-50 hover:border-blue-300 transition-all duration-300 group flex flex-col justify-between">
                <a class="text-blue-500" href="{{ path('dh_auditor_show_entity_history', {'entity': helper.namespaceToParam(entity)}) }}">
                <div class="px-4 py-3 sm:px-4">
                    <h3 class="text-lg leading-6 text-gray-900">
                        <code class="text-pink-500">{{ titles[table] }}</code>
                    </h3>
                    <p class="mt-1 max-w-2xl text-sm text-gray-500">
                        {{ entity|escape }}
                    </p>
                </div>
                <div style="padding:0px 15px"><img src="{{ absolute_url(asset('build/icons/' ~ icons[table] ~ '')) }}" alt="chipset" width="180" height="180"></div>
                <div class="border-t border-gray-200 px-4 py-2 bg-gray-50 group-hover:bg-blue-100 group-hover:border-blue-200 transition-all duration-300">
                    <dl class="flex justify-between items-center">
                        <dt class="text-sm font-medium text-gray-500">
                            {% trans with { '%count%': reader.createQuery(entity).count() } from 'auditor' %}audit.audit_details.operations_count{% endtrans %}
                        </dt>
                        <dd class="text-sm text-gray-900 text-right">
