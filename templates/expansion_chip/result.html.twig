{% if route is defined and route == true %}{% set typeid = 'route-results' %}{% else %}{% set typeid = domTarget %}{% endif %}
<div id="{{ typeid }}">
{% if expansionchips is defined and expansionchips is not empty %}
	<div class="results{% if not show_images %} lst{% endif %}">
		{{ knp_pagination_render(expansionchips, 'macros/pagination_async.html.twig') }}
		{% if show_images %}
			<div class="perks">
				<div id="index-datetime" class="perks-list">
				{% for expansionchip in expansionchips %}
					<div class="perk">
						<div class="perk-image">
						{% if expansionchip.getImages() is not empty %}
							{% set imgcount = 0 %}
							{% for image in expansionchip.getImages()|sort((a, b) => a.getFileName() <=> b.getFileName())|slice(0, 1) %}
								{% set imgcount = imgcount + 1 %}
								<a href="{{ vich_uploader_asset(image, 'imageFile')}}" class="glightbox">
									<img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('show_thumb') }}" alt="" title="Click to preview image"></a>
							{% endfor %}
							{% if imgcount == 0 %}<img src="{{ absolute_url(asset('build/images/missing/chip-missing.jpg')) }}" loading="lazy" width="250" height="200" title="no images available :(">{% endif %}
						{% else %}
							<img src="{{ absolute_url(asset('build/images/missing/chip-missing.jpg')) }}" loading="lazy" width="250" height="200" title="no images available :(">
						{% endif %}
						</div>
						<a href="{{ path("expansion_chip_show", {id: expansionchip.getId()}) }}" title="Click to visit page">
							<div class="perk-name">{{ expansionchip.getNameWithManufacturer() }}</div>
							<div class="perk-alias">
								{% if expansionchip.getChipAliases() is not empty %}<span class="results-alias">
									<small>Alias: {% for alias in expansionchip.getChipAliases() %}{{ alias.getFullAliasName() }}{% if not loop.last %}, {% endif %}{% endfor %}</small>
								</span>{% endif %}
							</div>
						</a>
					</div>	
				{% endfor %}
				</div>
			</div>
		{% else %}
			<div class="plain-list w300p table">
				{% include 'macros/widget.html.twig' with {'type':'expansionchip-results', 'entity': expansionchips} %}
			</div>
		{% endif %}
		{{ knp_pagination_render(expansionchips, 'macros/pagination_async.html.twig') }}
	</div>
{% else %}
	No results
{% endif %}
{% if params is defined %}
<div id="search-params-id" style="display:none;">{{params}}</div>
{% endif %}
</div>

