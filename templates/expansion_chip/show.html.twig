{% extends 'base.html.twig' %}
{% from 'macros/largeFile.html.twig' import link as driverLink %}
{% from 'macros/largeFile.html.twig' import header as driverHeader %}

{% block title %}
	{{ expansion_chip.getNameWithManufacturer() }}
{% endblock %}
{% block metatags %}
	<meta name="description" content="Expansion chip:{{ expansion_chip.getNameWithManufacturer() }}">
{% endblock %}

{% block opengraph %}
	{% apply spaceless %}
	<meta property="og:title" content="{{ expansion_chip.getNameWithManufacturer() }}">
	<meta property="og:description" content="Get expansion chip info, images and drivers for {{ expansion_chip.getNameWithManufacturer() }}!">
	{% if expansion_chip.getImages() is not empty %}
		{% for image in expansion_chip.getImages()|sort((a, b) => a.getFileName() <=> b.getFileName())|slice(0, 1) %}
			<meta name="twitter:image" content="{{ vich_uploader_asset(image, 'imageFile')}}">
			<meta property="og:image" content="{{ vich_uploader_asset(image, 'imageFile')}}">
		{% endfor %}
	{% endif %}
	{% endapply %}
	<link rel="alternate" hreflang="x-default" href="{{ absolute_url(path('expansion_chip_show', {id: expansion_chip.getId()})) }}"/>
{% endblock %}

{% block body %}
<!-- MANUF./NAME/PART NO. -->
<div class="title">{{ expansion_chip.getNameWithManufacturer() }}</div>
{% if expansion_chip.getChipAliases() is not empty %}
<div class="tag-container" style="justify-content:center;padding-bottom:15px">
	<span style="width:100%;text-align:center">Also known as:</span>
	{% for alias in expansion_chip.getChipAliases() %}
		<span class="text-block" >{{ alias.getFullAliasName() }}</span>
	{% endfor %}
</div>
{% endif %}

<div class="main-strip">
	<div class="internal-container">
		{% include 'macros/navbar.html.twig' with {'entity': expansion_chip, 'entityName': 'ExpansionChip', 'name': 'chip'} %}
		<div class="internal-content">
			<!-- DESCRIPRION -->
			<div class="show-general" id="sh-general">
				<div class="quick-spec-table">
					<!-- Type -->
					<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/show/chip.svg')) }}" alt="date" width="24" height="24">Type</div>
					<div>{{expansion_chip.getType().getName()}}</div>
					<!-- PCI DEV -->
					<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/show/tag.svg')) }}" alt="date" width="24" height="24">PCI ID</div>
					<div class="monospace">
					{% if expansion_chip.getPciDevs() is not empty %}
						{% if expansion_chip.getManufacturer().getPciVendorIds() is not empty %}
							{% for vendor in expansion_chip.getManufacturer().getPciVendorIds()%}
								{% for device in expansion_chip.getPciDevs() %}
								<div>PCI\VEN_{{vendor.getVen()}}&amp;DEV_{{device.getDev()}}</div>
								{% endfor %}
							{% endfor %}
						{% else %}PCI VEN missing!{% endif %}
					{% else %}unknown{% endif %}
					</div>
				</div>
				<div class="chipset-textarea">
				<!-- Description -->
				{% if expansion_chip.getDescription() is not empty %}
					{% apply markdown_to_html %}{{ expansion_chip.getDescription() }}{% endapply %}
				{% endif %}
				</div>
			</div>

			<div class="show-downloads" id="sh-downloads">
				<!-- DRIVERS -->
				<div class="show-downloads-group">
					<div class="show-downloads-group-header">
						<img src="{{ absolute_url(asset('build/icons/show/hardware.svg')) }}" alt="drv" width="32" height="32">
						<span>{{ expansion_chip.getDrivers.count() }} driver{% if expansion_chip.getDrivers.count() != 1 %}s{% endif %} available</span>
					</div>
					{% if expansion_chip.getDrivers() is not empty %}
					<div class="plain-list w300p table">
						<div class="list-entry centered head">
							<div>Language</div>
							<div>Media type</div>
							<div>OS support</div>
							<div>Name</div>
							<div>Version</div>
						</div>
						{% for driver in expansion_chip.getDrivers() %}
						<div class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
							<div class="header-label">Language</div>
							<div>
								<div class="tag-container">
								{% for lang in driver.largeFile.getLanguages() %}
								<span class="combo">
									<img src="{{ asset('build/icons/language/' ~ lang.getIsoCode ~ '.svg') }}" alt="{{lang.getOriginalName()}}" title="{{lang.getOriginalName()}}" class="lang-flag{% if loop.length > 4 %}-lrg{% endif %}">
								</span>
								{% endfor %}
								</div>
							</div>
							<div class="header-label">Media type</div>
							<div>
								{% for relation in driver.largeFile.getMediaTypeFlags() %}
								<span class="combo">
									<b>{{relation.getCount()}}x</b>
									<img src="{{ vich_uploader_asset(relation.getMediaTypeFlag(), 'icon')}}" alt="{{relation.getMediaTypeFlag().getName()}}" title="{{relation.getMediaTypeFlag().getName()}}" width="32">
								</span>
								{% endfor %}
							</div>
							<div class="header-label">OS support</div>
							<div>
								<div class="tag-container">
								{% for os in driver.largeFile.getOsFlags()|sort((a, b) => a.getName <=> b.getName)|sort((a, b) => a.getVersion <=> b.getVersion) %}
								<span class="text-block">
									<img src="{{ asset('build/icons/os/' ~ os.getVersion ~ '.svg') }}" alt="{{os.getVersion}}"  width="16">
									<span>{{os.getName()}}</span>
								</span>
								{% endfor %}
								</div>
							</div>
							<div class="header-label">Name</div>
							<div><a href="{{ path("driver_show", {id: driver.largeFile.getId()}) }}">{{driver.largeFile.getName()}}</a></div>
							<div class="header-label">Version</div>
							<div>
								<a class="combo" href="{{ vich_uploader_asset(driver.largeFile, 'file')}}">
									<img src="{{ absolute_url(asset('build/icons/dw.svg')) }}" alt="" width="16">
									<span>{{ driver.largeFile.getFileVersion() ? driver.largeFile.getFileVersion() : 'Unknown' }}</span>
								</a>
							</div>
						</div>
						{% endfor %}
					</div>
					{% else %}
					{% endif %}
				</div>

				<!-- MANUALS -->
				<div class="show-downloads-group">
					{% set allDocs = expansion_chip.getDocumentations() %}
					<div class="show-downloads-group-header">
						<img src="{{ absolute_url(asset('build/icons/show/manual.svg')) }}" alt="doc" width="32" height="32">
						<span>{{ allDocs|length }} document{% if allDocs|length != 1 %}s{% endif %} available</span>
					</div>
					{% if allDocs is not empty %}
					<div class="plain-list w300p table">
						<div class="list-entry centered head">
							<div>Language</div>
							<div>File</div>
						</div>
						{% for manual in allDocs|sort((a, b) => a.getLinkName <=> b.getLinkName) %}
						<div class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
							<div class="header-label">Language</div>
							<div>{{ manual.getLanguage().getName()}}</div>
							<div class="header-label">File</div>
							<div>
								<a class="combo" href="{{ vich_uploader_asset(manual, 'manualFile') }}">
									<img src="{{ absolute_url(asset('build/icons/dw.svg')) }}" alt="" width="16" height="16">
									<span>{{ manual.getLinkName() }}</span>
								</a>
							</div>
						</div>
						{% endfor %}
					</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>

	<!-- IMAGES -->
	{% if expansion_chip.getImages() is not empty %}
		{% set lpindex = 0 %}
		<div class="show-images" id="sh-images">
			{% for image in expansion_chip.getImages()|sort((a, b) => a.getFileName() <=> b.getFileName()) %}
				{% set lpindex = lpindex + 1 %}
				{% include 'macros/images.html.twig' with {'type':'expansionchip', 'entity': image, 'index': lpindex, 'length': expansion_chip.getImages()|length} %}
			{% endfor %}
		</div>
	{#{% else %}
		<div class="show-image"><p style="font-size:20px;height:100px;">no images available :(</p></div>#}
	{% endif %}

</div>
<div class="disclaimer">
	<p><b>Disclaimer</b></p>
	<p>The info found in this page might not be entirely correct. Check out <a href="{{ path('app_contributions') }}">this guide</a> to learn how you can improve it.</p>
</div>
{% endblock %}
