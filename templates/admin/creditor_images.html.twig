<div class="show-nav-ea" id="sh-nav">
    <input type="radio" name="tabs" id="tab-nav-1" checked>
    <label for="tab-nav-1"><img src="{{ absolute_url(asset('build/icons/board.svg')) }}" alt="" width="24" height="24">Boards</label>
    <input type="radio" name="tabs" id="tab-nav-2">
    <label for="tab-nav-2"><img src="{{ absolute_url(asset('build/icons/chip.svg')) }}" alt="" width="24" height="24">Chips</label>
    <input type="radio" name="tabs" id="tab-nav-3">
    <label for="tab-nav-3"><img src="{{ absolute_url(asset('build/icons/hdd.svg')) }}" alt="" width="24" height="24">Storage devices</label>
</div>
<div class="show-general" id="sh-general">
{% if motherboards is defined and motherboards is not empty %}
	<div class="results">
		{{ knp_pagination_render(motherboards, 'macros/pagination.html.twig') }}
		<div class="perks">
			<div id="index-datetime" class="perks-list">
			{% for motherboard in motherboards %}
				<div class="perk">
					<div class="perk-image">
					{% if motherboard.getImages() is not empty %}
						{% set imgtype_count = 0 %}
						{% for image in motherboard.getImages()|filter(a => a.motherboardImageType.id in [1, 2])|sort((a, b) => a.getFileName() <=> b.getFileName())|sort((a, b) => b.motherboardImageType <=> a.motherboardImageType)|slice(0, 1) %}
							<a href="{{ vich_uploader_asset(image, 'imageFile')}}" class="glightbox"><img src="{% if vich_uploader_asset(image, 'imageFile') | ext != "svg" %}
								{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('show_thumb') }}{% else %}
								{{ vich_uploader_asset(image, 'imageFile')}}{% endif %}" alt="" loading="lazy" width="250" height="200" title="Click to preview image"></a>
							{% set imgtype_count = imgtype_count + 1 %}
						{% endfor %}
						{% if imgtype_count == 0 %}
							<img src="{{ absolute_url(asset('build/images/missing/board-missing.jpg')) }}" loading="lazy" width="250" height="200" title="no images available :(">
						{% endif %}
					{% else %}
						<img src="{{ absolute_url(asset('build/images/missing/board-missing.jpg')) }}" loading="lazy" width="250" height="200" title="no images available :(">
					{% endif %}</div>
					<a href="{{ path("motherboard_show", {id:motherboard.getId()}) }}" title="Click to visit page">
						<div class="perk-name">{{ motherboard.getManufacturerName() }}&nbsp;{{ motherboard.name }}</div>
						<div class="perk-alias">
						{% if motherboard.getMotherboardAliases() is not empty %}{% for alias in motherboard.getMotherboardAliases() %}
							<span class="results-alias">
								<small>{% if alias.getManufacturer() is not null %}{{ alias.getManufacturer().getName() }}{% else %}Unknown{% endif %}&nbsp;{{ alias.name }}{% if not loop.last %} |{% endif %}</small>
							</span>
						{% endfor %}{% endif %}</div>
					</a>
				</div>
			{% endfor %}
			</div>
		</div>
		{{ knp_pagination_render(motherboards, 'macros/pagination.html.twig') }}
	</div>
{% else %}
	No motherboards
{% endif %}
</div>
