{% extends 'admin/header.html.twig' %}

{% block title %}Manage memory{% endblock %}

{% block body %}
    <ul>
        <li><a href="./memories?entity=ramtype">{% trans %}DRAM Types{% endtrans %}</a></li>
        <li><a href="./memories?entity=ramsize">{% trans %}RAM Sizes{% endtrans %}</a></li>
        <li><a href="./memories?entity=cachesize">{% trans %}Cache Sizes{% endtrans %}</a></li>
    </ul>
    <div class="main">
        <div class="page">
            <h2 class="title">{{ entityDisplayNamePlural|capitalize }}</h2>
            <hr>
            <a class="result-link" href="./memories/{{entityName}}s/add/">Add a {{ entityDisplayName }}</a>
            <div style="height:12em;">
                {% if search is not empty %}
                    {{ form(search) }}
                {% endif %}
                {{ render(controller(
                    controllerList, {criterias: criterias}, {page: page}
                )) }}
            </div>
        </div>
    </div>
{% endblock %}