{% extends 'admin/header.html.twig' %}

{% block title %}Manage memory{% endblock %}

{% block body %}
<div class="main">
    <div class="page">
        <h2 class="title">{{ entityDisplayNamePlural|capitalize }}</h2>
        <a href="{{ path('admin_index') }}" class="admin-button" style="padding:0px 5px 0px;">
            <img src="{{ root }}/assets/images/back.png" style="padding-top:5px;vertical-align:top;" alt="add" style="display:inline-block;">
            <p style="display:inline-block;">Go back</p>
        </a>
        <a href="./memories?entity=ramtype" class="admin-button" style="padding:0px 5px 0px;{% if entityName == "ramtype" %}background-color: #afff97;{% endif %}">
        <p {% if entityName == "ramtype" %}style="color: #000000;"{% endif %}>{% trans %}DRAM Types{% endtrans %}</p></a>
        <a href="./memories?entity=ramsize" class="admin-button" style="padding:0px 5px 0px;{% if entityName == "ramsize" %}background-color: #afff97;{% endif %}">
        <p {% if entityName == "ramsize" %}style="color: #000000;"{% endif %}>{% trans %}RAM Sizes{% endtrans %}</p></a>
        <a href="./memories?entity=cachesize" class="admin-button" style="padding:0px 5px 0px;{% if entityName == "cachesize" %}background-color: #afff97;{% endif %}">
        <p {% if entityName == "cachesize" %}style="color: #000000;"{% endif %}>{% trans %}Cache Sizes{% endtrans %}</p></a>
        <a href="./memories/{{entityName}}s/add/" class="admin-button" style="padding:0px 5px 0px;float:right;">
            <img src="{{ root }}/assets/images/add.png" style="padding-top:5px;vertical-align:top;" alt="add" style="display:inline-block;">
            <p style="display:inline-block;">Add a {{ entityDisplayName }}</p>
        </a>
        <hr>
        <div style="height:12em;">
                {% if search is not empty %}
                    {{ form(search) }}
                {% endif %}
                {{ render(controller(
                    controllerList, {criterias: criterias}, {page: page, entity: entityName}
                )) }}
            </div>
        </div>
    </div>
{% endblock %}