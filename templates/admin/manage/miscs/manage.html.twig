{% extends 'admin/header.html.twig' %}

{% block title %}Manage miscs{% endblock %}

{% block body %}
<div class="main">
    <a href="{{ path('admin_index') }}">Go back</a>
    <div class="page">
        <h2 class="title">{{ entityDisplayNamePlural|capitalize }}</h2>
        <a href="./miscs?entity=manufacturer" class="admin-button" style="padding:0px 5px 0px;{% if entityName == "manufacturer" %}background-color: #afff97;{% endif %}">
        <p {% if entityName == "manufacturer" %}style="color: #000000;"{% endif %}>{% trans %}Manufacturers{% endtrans %}</p></a>
        <a href="./miscs?entity=issue" class="admin-button" style="padding:0px 5px 0px;{% if entityName == "issue" %}background-color: #afff97;{% endif %}">
        <p {% if entityName == "issue" %}style="color: #000000;"{% endif %}>{% trans %}Known issues{% endtrans %}</p></a>
        <a href="./miscs?entity=freq" class="admin-button" style="padding:0px 5px 0px;{% if entityName == "freq" %}background-color: #afff97;{% endif %}">
        <p {% if entityName == "freq" %}style="color: #000000;"{% endif %}>{% trans %}Frequencies{% endtrans %}</p></a>
        <a href="./miscs?entity=creditor" class="admin-button" style="padding:0px 5px 0px;{% if entityName == "creditor" %}background-color: #afff97;{% endif %}">
        <p {% if entityName == "creditor" %}style="color: #000000;"{% endif %}>{% trans %}Creditors{% endtrans %}</p></a>
        <hr>
        <a class="result-link" href="./miscs/{{entityName}}s/add/">Add a {{ entityDisplayName }}</a>
        <div style="height:12em;">
            {% if search is not empty %}
                {{ form(search) }}
            {% endif %}
            {{ render(controller(
                controllerList, {criterias: criterias}, {page: page, entity: entityName}
            )) }}
        </div>
    </div>
</div>
{% endblock %}