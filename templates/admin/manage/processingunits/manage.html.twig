{% extends 'admin/header.html.twig' %}

{% block title %}
	Manage processing units
{% endblock %}

{% block body %}

	<div class="title">
		<b>{{ entityDisplayNamePlural|capitalize }}</b>
	</div>
	<a href="{{ path('admin_index') }}" class="admin-button">
		<img src="{{ absolute_url(asset('build/images/back.svg')) }}" alt="add" width="32">
		<p>Go back</p>
	</a>
	<a href="{{ path('admin_manage_processing_units', {entity:"processor"}) }}" class="admin-button" style="{% if entityName == "processor" %}background-color: #afff97;{% endif %}">
		<p {% if entityName == "processor" %} style="color: #000000;" {% endif %}>{% trans %}CPUs{% endtrans %}</p>
	</a>
	<a href="{{ path('admin_manage_processing_units', {entity:"coprocessor"}) }}" class="admin-button" style="{% if entityName == "coprocessor" %}background-color: #afff97;{% endif %}">
		<p {% if entityName == "coprocessor" %} style="color: #000000;" {% endif %}>{% trans %}NPUs{% endtrans %}</p>
	</a>
	<a href="{{ path('admin_manage_processing_units', {entity:"platform"}) }}" class="admin-button" style="{% if entityName == "platform" %}background-color: #afff97;{% endif %}">
		<p {% if entityName == "platform" %} style="color: #000000;" {% endif %}>{% trans %}CPU platforms{% endtrans %}</p>
	</a>
	<a href="{{ path('admin_manage_processing_units', {entity:"instructionset"}) }}" class="admin-button" style="{% if entityName == "instructionset" %}background-color: #afff97;{% endif %}">
		<p {% if entityName == "instructionset" %} style="color: #000000;" {% endif %}>{% trans %}Instruction Sets{% endtrans %}</p>
	</a>
	{% if search is not empty %}
		<div class="processing-search">
			{{ form(search) }}
			</div>
		{% endif %}
		<a href="./processingunits/{{entityName}}s/add/" class="admin-button" style="float:right;">
		<img src="{{ absolute_url(asset('build/images/add.svg')) }}" alt="add" width="32">
		<p>Add {{ entityDisplayName }}</p>
	</a>
		<hr>
		<div class="list-view">
			{{ render(controller(controllerList, {criterias: criterias}, {page: page, entity: entityName})) }}
		</div>
	{% endblock %}
