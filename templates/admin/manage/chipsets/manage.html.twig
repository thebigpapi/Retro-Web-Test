{% extends 'admin/header.html.twig' %}

{% block title %}Manage chipsets
{% endblock %}

{% block body %}
	<div class="title">
		<b>{{ entityDisplayNamePlural|capitalize }}</b>
	</div>
	<a href="{{ path('admin_index') }}" class="admin-button">
		<img src="{{ absolute_url(asset('build/icons/back.svg')) }}" alt="add" width="32">
		<p>Go back</p>
	</a>
	<a href="{{ path('admin_manage_chipsets', {entity:"chipset"}) }}" class="admin-button" style="{% if entityName == "chipset" %}background-color: #afff97;{% endif %}">
		<p {% if entityName == "chipset" %} style="color: #000000;" {% endif %}>{% trans %}Chipsets{% endtrans %}</p>
	</a>
	<a href="{{ path('admin_manage_chipsets', {entity:"part"}) }}" class="admin-button" style="{% if entityName == "part" %}background-color: #afff97;{% endif %}">
		<p {% if entityName == "part" %} style="color: #000000;" {% endif %}>{% trans %}Chipset parts{% endtrans %}</p>
	</a>
	{% if search is not empty %}
		<div style="display:inline-block;vertical-align:bottom;">{{ form(search) }}</div>
	{% endif %}
	<a href="./chipsets/{{entityName}}s/add/" class="admin-button" style="float:right;">
		<img src="{{ absolute_url(asset('build/icons/add.svg')) }}" alt="add" width="32">
		<p>Add {{ entityDisplayName }}</p>
	</a>
	<hr>
	<div class="list-view">
		{{ render(controller(controllerList, {criterias: criterias}, {page: page, entity: entityName})) }}
	</div>
{% endblock %}
