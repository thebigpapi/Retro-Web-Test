                            <div class="">
                                <div class="specs-elements form-group">
                                    <label for="MiscSpecs_table_{id1}_{id2}_key" class="form-control-label">Key</label>
                                    <div class="form-widget first">
                                        <input type="text" placeholder="Property:" id="MiscSpecs_table_{id1}_{id2}_key" name="ExpansionCard[miscSpecs][{id1}][{id2}][key]" class="form-control">
                                    </div>
                                    <label for="MiscSpecs_table_{id1}_{id2}_value" class="form-control-label">Value</label>
                                    <div class="form-widget second">
                                        <input type="text" placeholder="Value:" id="MiscSpecs_table_{id1}_{id2}_value" name="ExpansionCard[miscSpecs][{id1}][{id2}][value]" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-body-delete-btn">
                    <button id="MiscSpecs_table_{id1}_{id2}_deletebtn" type="button" class="btn btn-link btn-link-danger" style="position:relative;" title="Remove the item">
                        <i class="far fa-trash-alt"></i>
                    </button>
                </div>
            </div>
        </div>
        <button class="accordion-button" style="width:0;display:none;" type="button" data-bs-toggle="collapse" data-bs-target="#MiscSpecs_table_{id1}_{id2}-contents">
            <i class="fas fw fa-chevron-right form-collection-item-collapse-marker"></i>
        </button>
    </div>
</template>
