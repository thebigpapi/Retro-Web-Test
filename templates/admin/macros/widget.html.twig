{% if type == "alias" %}
    <div class="quick-spec-table nopad" data-controller="collection">
		<div class="quick-spec-head editor"><div>{{displayname}}</div>
		{% include 'macros/buttons.html.twig' with {'type':'add', 'action': 'chip.chipAliases'} %}</div>
		<div id="chip.chipAliases-fields-list" data-widget-counter="{{ entity|length }}" data-prototype="
            {{ form_widget(entity.vars.prototype.manufacturer, {'attr': {'style': 'width:30%;display:inline-block;'}})|e }}
            {{ form_widget(entity.vars.prototype.partNumber, {'attr': {'style': 'width:25%;display:inline-block;'}})|e }} 
            {{ form_widget(entity.vars.prototype.name, {'attr': {'style': 'width:25%;display:inline-block;'}})|e }}  
			{% include 'macros/buttons.html.twig' with {'type':'del', 'count':1} %}">
            <div style="display:flex;text-align:center;">
                <div style="width:30%;"><i>Manufacturer</i></div>
                <div style="width:27%;"><i>Part number</i></div>
                <div style="width:27%;"><i>Name</i></div>
            </div>
			{% if entity is not empty %}
				{% for alias in entity %}
					<div class="editor-row nopad">
						{{ form_widget(alias.manufacturer, {'attr': {'style': 'width:30%;display:inline-block;'}})|replace({'<option value="">': '<option label=" " value="">'})|raw }}
                        {{ form_widget(alias.partNumber, {'attr': {'style': 'width:25%;display:inline-block;'}})}}
                        {{ form_widget(alias.name, {'attr': {'style': 'width:25%;display:inline-block;'}}) }}
						{% include 'macros/buttons.html.twig' with {'type':'del', 'count':1} %}
					</div>
					{{ form_errors(alias) }}
				{% endfor %}
			{% endif %}
			{{ form_errors(entity) }}
		</div>
	</div>
{% endif %}