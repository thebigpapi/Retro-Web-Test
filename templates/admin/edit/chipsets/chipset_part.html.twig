{% extends 'admin/header.html.twig' %}

{% block title %}Manage chipset parts
{% endblock %}

{% block body %}
	<div style="height:6em;"></div>
	<div style="text-align:center;">
		<b>Edit:Chipset part</b>
	</div>
	{{ form_start(form, {'method': 'POST'}) }}
	<div>
		{% include 'macros/entityListImages.html.twig' with {'entityName':'chip.images', 'entities':form.chip.images} %}
		<table class="editasset">
			<tr><td colspan="2">{{form_widget(form.save)}}</td></tr>
			<tr>
				<td>{{form_label(form.chip.manufacturer)}}</td>
				<td>{{form_widget(form.chip.manufacturer)}}</td>
			</tr>
			<tr>
				<td>{{form_label(form.chip.name)}}</td>
				<td>{{form_widget(form.chip.name)}}</td>
			</tr>
			<tr>
				<td>Part number</td>
				<td>{{form_widget(form.chip.partNumber)}}</td>
			</tr>
			<tr>
				<td>{{form_label(form.chip.chipAliases)}}</td>
				<td>{% include 'macros/entityList.html.twig' with {'entityName':'chip.chipAliases', 'entityDisplayName': 'chip alias', 'entities':form.chip.chipAliases} %}</td>
			</tr>
		</table>
	</div>
	<div id="hiddenDiv" style="display: none;">{{ form_end(form) }}</div>
{% endblock %}
