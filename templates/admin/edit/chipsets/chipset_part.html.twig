{% extends 'base.html.twig' %}

{% block title %}Manage chipset parts
{% endblock %}

{% block body %}
	<div class="title" style="padding-top:5em;">
		<b>Edit:&nbsp;Chipset part&nbsp;&nbsp;</b>
		<a class="snav" onclick="document.getElementById('chipset_part_form_save').click();">
			<img src="{{ absolute_url(asset('build/icons/show/edit.svg')) }}" alt="" width="24" style="vertical-align: middle;padding-right:2px;">Save</a>
	</div>
	{{ form_start(form, {'method': 'POST'}) }}
	<div>
		{% include 'macros/entityListImages.html.twig' with {'entityName':'chip.images', 'entities':form.chip.images} %}
		<table>
			<tr>
				<td>{{form_label(form.chip.manufacturer)}}</td>
				<td>{{form_widget(form.chip.manufacturer)}}</td>
			</tr>
			<tr>
				<td>{{form_label(form.chip.name)}}</td>
				<td>{{form_widget(form.chip.name)}}</td>
			</tr>
			<tr>
				<td>Part number</td>
				<td>{{form_widget(form.chip.partNumber)}}</td>
			</tr>
			<tr>
				<td colspan="2">{{form_label(form.chip.chipAliases)}}</td>
			</tr>
			<tr>
				<td colspan="2">{% include 'macros/entityList.html.twig' with {'entityName':'chip.chipAliases', 'entityDisplayName': 'chip alias', 'entities':form.chip.chipAliases} %}</td>
			</tr>
		</table>
	</div>
	<div id="hiddenDiv" style="display: none;">{{form_widget(form.save) }}{{ form_end(form)|replace({'</form>': '</div></form>'})|raw }}
{% endblock %}
