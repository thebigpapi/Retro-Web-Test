{% extends 'base.html.twig' %}

{% block title %}Manage media type flags{% endblock %}

{% block body %}
<div class="title" style="padding-top:5em;display:flex;justify-content:center;align-items:center;">
	<b>Edit:&nbsp;Media type flag&nbsp;&nbsp;</b>
	<button type="button" name="tabs" id="tab-nav-save" onclick="document.getElementById('media_type_flag_form_save').click();"><img src="{{ absolute_url(asset('build/icons/edit.svg')) }}" alt="" width="24" height="24"><span>Save</span></button>
</div>
{{ form_start(form, {'method': 'POST'}) }}
<div class="errors-div"><ul>
    {% for error in form.vars.errors.form.getErrors(true) %}
    <li>{{ error.message }}</li>
    {% endfor %}
</ul></div>
<div style="margin:0 auto;display:table;">
	<table>
		<tr>
			<td>{{form_label(form.name)}}</td>
			<td>{{form_widget(form.name)}}</td>
		</tr>
        <tr>
			<td>{{form_label(form.tagName)}}</td>
			<td>{{form_widget(form.tagName)}}</td>
		</tr>
        <tr>
			<td>{{form_label(form.file_name)}}</td>
			<td>{{form_widget(form.file_name)}}</td>
		</tr>
        <tr>
			<td>{{form_label(form.icon)}}</td>
			<td>{{form_widget(form.icon)}}</td>
		</tr>
	</table>
</div>
<div id="hiddenDiv" style="display: none;">{{form_widget(form.save) }}{{ form_end(form)|replace({'</form>': '</div></form>'})|raw }}
{% endblock %}