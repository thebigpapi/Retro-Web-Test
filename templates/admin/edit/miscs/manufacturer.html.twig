{% extends 'admin/header.html.twig' %}

{% block title %}Manage manufacturer
{% endblock %}

{% block body %}
	<div style="height:6em;"></div>
	{{ form_start(form, {'method': 'POST'}) }}
	<div class="editasset">
		<h2>
			<b>Edit: Manufacturer</b>
		</h2>
		{{form_widget(form.save)}}
		<table class="editasset">
			<tr>
				<td>{{form_label(form.name)}}</td>
				<td>{{form_widget(form.name)}}</td>
			</tr>
			<tr>
				<td>{{form_label(form.shortName)}}</td>
				<td>{{form_widget(form.shortName)}}</td>
			</tr>
			<tr>
				<td>Bios codes:</td>
				<td>{% include 'macros/entityList.html.twig' with {'entityName':'biosCodes', 'entityDisplayName': 'BIOS code', 'entities':form.biosCodes} %}</td>
			</tr>
		</table>
	</div>
	<div id="hiddenDiv" style="display: none;">
		{{ form_end(form) }}
	</div>
{% endblock %}
