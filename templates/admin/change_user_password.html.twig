{% extends 'base.html.twig' %}

{% block title %}Manage password
{% endblock %}

{% block body %}
<div class="title" style="padding-top:5em;">
	<b>Edit:&nbsp;Password&nbsp;&nbsp;</b>
	<a class="snav" onclick="document.getElementById('form_save').click();">
		<img src="{{ absolute_url(asset('build/icons/show/edit.svg')) }}" alt="" width="24" style="vertical-align: middle;padding-right:2px;">Save</a>
</div>
{{ form_start(form, {'method': 'POST'}) }}
<div style="margin:0 auto;display:table;">
	<img style="display:inline-block;" src="{{ absolute_url(asset('build/icons/admin/keys.svg')) }}" width="128" alt="">
	<table style="display:inline-block;">
		<tr>
			<td>{{form_label(form.old_password)}}</td>
			<td>{{form_widget(form.old_password)}}</td>
		</tr>
		<tr>
			<td>{{form_label(form.new_password)}}</td>
			<td>{{form_widget(form.new_password)}}</td>
		</tr>
		<tr>
			<td>{{form_label(form.new_password_confirm)}}</td>
			<td>{{form_widget(form.new_password_confirm)}}</td>
		</tr>
	</table>
</div>
<div id="hiddenDiv" style="display: none;">{{form_widget(form.save) }}{{ form_end(form)|replace({'</form>': '</div></form>'})|raw }}
{% endblock %}
