{% extends 'admin/header.html.twig' %}

{% block title %}Manage CPU sockets{% endblock %}

{% block body %}
<div style="height:5em;"></div>
<h2 style="text-align:center;"><b>Edit:CPU Socket</b></h2>
{{ form_start(form, {'method': 'POST'}) }}
<div class="editasset">
	{{form_widget(form.save)}}
    <table class="editasset">
		<tr>
			<td>{{form_label(form.name)}}</td>
			<td>{{form_widget(form.name)}}</td>
		</tr>
        <tr>
			<td>{{form_label(form.type)}}</td>
			<td>{{form_widget(form.type)}}</td>
		</tr>
	</table> 

	<div>
		<p>Platforms:</p> 
		<button type="button" onclick="expand('platforms-fields-list')">Add platform</button>
		
        {{ form_errors(form.platforms) }}
        <div id="platforms-fields-list" data-widget-counter="{{ form.platforms|length }}"
            data-prototype="{{ form_widget(form.platforms.vars.prototype)|e }}
			<button type=button onclick=this.parentNode.parentNode.removeChild(this.parentNode);>Del</button>">
            {% for platform in form.platforms %}
            <div>
                {{ form_errors(platform) }}
                {{ form_widget(platform) }}
                <button type="button" onclick="this.parentNode.parentNode.removeChild(this.parentNode);">Del</button>
            </div>
            {% endfor %}
        </div>
	</div>  
</div>
