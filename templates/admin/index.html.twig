{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Administration index{% endtrans %}
{% endblock %}

{% block body %}
	<div class="title">Dashboard</div>
	<div class="index-buttons">
		<a href="{{ path('admin_manage_motherboards') }}">
			<img src="{{ absolute_url(asset('build/images/admin/motherboard.jpg')) }}" alt="board">
			<div>Motherboards</div>
		</a>
		<a href="{{ path('admin_manage_processing_units') }}">
			<img src="{{ absolute_url(asset('build/images/admin/486dx.png')) }}" alt="cpu">
			<div>Processing units</div>
		</a>
		<a href="{{ path('admin_manage_memories') }}">
			<img src="{{ absolute_url(asset('build/images/admin/memory.png')) }}" alt="memory">
			<div>Memory</div>
		</a>
		<a href="{{ path('admin_manage_chipsets') }}">
			<img src="{{ absolute_url(asset('build/images/admin/chip.png')) }}" alt="chipset">
			<div>Chipsets</div>
		</a>
		<a href="{{ path('admin_manage_expansion_chipsets') }}">
			<img src="{{ absolute_url(asset('build/images/admin/exp_chip.png')) }}" alt="chip part">
			<div>Audio/Video chips</div>
		</a>
		<a href="{{ path('admin_manage_connectors') }}">
			<img src="{{ absolute_url(asset('build/icons/admin/connector.svg')) }}" alt="connector">
			<div>Connectors</div>
		</a>
		<a href="{{ path('admin_manage_files') }}">
			<img src="{{ absolute_url(asset('build/images/admin/file.png')) }}" alt="file">
			<div>Files</div>
		</a>
		<a href="{{ path('admin_manage_miscs') }}">
			<img src="{{ absolute_url(asset('build/icons/admin/misc.svg')) }}" alt="misc">
			<div>Other fields</div>
		</a>
		<a href="{{ path('admin_change_user_password') }}">
			<img src="{{ absolute_url(asset('build/icons/admin/keys.svg')) }}" alt="passwd">
			<div>Change password</div>
		</a>
		{% if is_granted('ROLE_SUPER_ADMIN') %}
			<a href="{{ path('admin_manage_users') }}">
				<img src="{{ absolute_url(asset('build/icons/admin/user.svg')) }}" alt="user">
				<div>Manage users</div>
			</a>
		{% endif %}
	</div>

	<div class="title"><h4>Under construction</h4></div>
	<div class="index-buttons">
		<a href="{{ path('admin_stats') }}">
			<img src="{{ absolute_url(asset('build/icons/show/data.svg')) }}" alt="">
			<div>Board stats</div>
		</a>
		<a href="{{ path('admin_logs') }}">
			<img src="{{ absolute_url(asset('build/icons/show/data.svg')) }}" alt="">
			<div>Logs</div>
		</a>
	</div>
{% endblock %}
