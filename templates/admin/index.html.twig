<a href="../admin/manage/motherboards" class="admin-button">
	<img src="./assets/images/motherboard_add.jpg" style="padding:8px 25px 0px">
	<p><b>{% trans %}Board count: {% endtrans %} {{moboCount}}</b></p>
	<p>Manage motherboards</p>
</a>
<a href="./admin/manage/processingunits" class="admin-button">
	<img src="./assets/images/486dx.png" style="padding:0px 30px 0px">
	<p>Manage processing units</p>
</a>
<a href="./admin/manage/memories" class="admin-button">
	<img src="./assets/images/memory.png" style="padding:2px 0px 1px">
	<p>Manage memory</p>
</a>
<a href="./admin/manage/chipsets" class="admin-button">
	<img src="./assets/images/chip.png" style="padding:2px 25px 2px">
