{% extends '@EasyAdmin/page/content.html.twig' %}
{% block page_title %}Dashboard{% endblock %}
{% block main %}
    <div class="row statistics-charts">
        <div class="col-md-6" data-id="boardManuf" data-name="Board count" data-ratio="1" data-type="bar">
            <div class="col-md-12"><h4><i>Board count by manufacturer (first 25)</i></h4></div>
            <canvas id="boardManufCanvas"></canvas>
            {% for key, value in boardChart %}
                <div id="{{key}}" style="display:none;">{{value}}</div>
            {% endfor %}
        </div>
        <div class="col-md-6" data-id="boardSocket" data-name="Board count" data-ratio="1" data-type="bar">
            <div class="col-md-12"><h4><i>Board count by socket (first 25)</i></h4></div>
            <canvas id="boardSocketCanvas"></canvas>
            {% for key, value in socketChart %}
                <div id="{{key}}" style="display:none;">{{value}}</div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div>
            <b>Branch: </b>
            <span>{{ collector.getBranchName() }} </span>
        </div>
        <div>
            <b>Version date:</b>
            <span>{{ collector.getLastCommitDetail()['date'] }} </span>
        </div>
        <div>
            <b>Commit hash:</b>
            <span>{{ collector.getCurrentCommitHash()}} </span>
        </div>
    </div>
{% endblock %}