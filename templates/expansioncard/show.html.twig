{% extends 'base.html.twig' %}

{% block title %}
	{{ expansioncard.getPrettyTitle() }}
{% endblock %}
{% block metatags %}
	<meta name="description" content="Expansion card:{{ expansioncard.getPrettyTitle() }}">
{% endblock %}
{% block extra_javascripts %}
	<script src="/build/js/show.js" defer></script>
{% endblock %}

{% block opengraph %}
	{% apply spaceless %}
	<meta property="og:title" content="{{ expansioncard.getPrettyTitle() }}">
	<meta property="og:description" content="Get info, images and drivers for the {{ expansioncard.getPrettyTitle() }} expansion chip">
	{% if expansioncard.getImages() is not empty %}
		{% for image in expansioncard.getImages()|sort((a, b) => a.getFileName() <=> b.getFileName())|slice(0, 1) %}
			<meta name="twitter:image" content="{{ vich_uploader_asset(image, 'imageFile')}}">
			<meta property="og:image" content="{{ vich_uploader_asset(image, 'imageFile')}}">
		{% endfor %}
	{% else %}
		<meta name="twitter:image" content="{{ absolute_url(asset('build/images/missing/chip-missing.jpg')) }}">
		<meta property="og:image" content="{{ absolute_url(asset('build/images/missing/chip-missing.jpg')) }}">
	{% endif %}
	{% endapply %}
	<link rel="alternate" hreflang="x-default" href="{{ absolute_url(path('expansioncard_show', {id: expansioncard.getId()})) }}"/>
{% endblock %}
{% block subnav %}
<li class="flex navbar-li">
    <div class="flex items-center">
        <svg class="navbar-svg" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z"></path>
        </svg>
        <a class="ml-4" href="{{ path('expansioncardsearch') }}">
			<img src="{{ absolute_url(asset('build/icons/card.svg')) }}" width="24" height="24" alt="card">
            <code class="text-pink-500">Expansion cards</code>
        </a>
    </div>
</li>
<li class="flex">
    <div class="flex">
        <svg class="navbar-svg" viewBox="0 0 24 44" preserveAspectRatio="none" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M.293 0l22 22-22 22h1.414l22-22-22-22H.293z"></path>
        </svg>
        <code class="navbar-code">ID: {{expansioncard.getId()}}</code>
    </div>
</li>
{% endblock %}
{% block body %}
<!-- MANUF./NAME/PART NO. -->
<div class="title">{{ expansioncard.getPrettyTitle() }}</div>
<div class="main-strip">
	<div class="internal-container">
		{% include 'macros/navbar.html.twig' with {'entity': expansioncard, 'entityName': 'ExpansionCard', 'name': 'card'} %}
		<div class="internal-content">
			<!-- DESCRIPRION -->
			<div class="show-general" id="sh-general">
				<div class="quick-spec-table">
					<!-- Type -->
					<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/chip.svg')) }}" alt="date" width="24" height="24">Type</div>
					<div>{#{expansioncard.getType().getName()}#}</div>
					<!-- Expansion Chips -->
					{% if expansioncard.getExpansionChips() is not empty %}
						{% for type in expansionchiptype %}
							{% for chip in expansioncard.getExpansionChips()|filter(a => a.getType().getName() == type.getName())%}
								{% if loop.first %}<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/chip.svg')) }}" alt="chip" width="24" height="24">{{chip.getType().getName()}} chips</div><div class="tag-container">{% endif %}
								<a href="{{ path('expansion_chip_show', {id: chip.getId()}) }}"><span class="text-block">{{ chip.getNameWithManufacturer() }}</span></a>
								{% if loop.index == expansioncard.getExpansionChips()|filter(a => a.getType().getName() == type.getName())|length %}</div>{% endif %}
							{% endfor %}
						{% endfor %}
					{% endif %}
					<!-- Actions -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/cursor.svg')) }}" alt="act" width="24" height="24">Actions
					</div>
					<div>
					<div class="toolbar">
						<a class='button-widget' href="{{ absolute_url(path('app_homepage')) }}expansioncards/?expansionChipIds%5B0%5D={{ expansioncard.getId() }}&amp;showImages=1">
							<img src='{{ absolute_url(asset('build/icons/hardware.svg')) }}' alt='' width='16' height='16' style='vertical-align:middle;padding:3px;'>See all boards with this chip</a>
						</div>
					</div>
				</div>
				<div class="full-spec">
				{% include 'macros/aliases.html.twig' with {'entity':expansioncard.getExpansionCardAliases(), 'msg': 'Also known as:'} %}
				{% include 'macros/notes.html.twig' with {'entity': expansioncard} %}
				<div id="index-datetime"><div class="div-datetime">Last updated <span class="perk-date">{{ expansioncard.getLastEdited()|date("Y-m-d\\TH:i:s", "GMT") }}Z</span></div></div>
				</div>
			</div>
			<!-- BIOSes -->
			<div class="show-downloads" id="sh-bios">
				<div class="show-downloads-group">
					<div class="show-downloads-group-header">
						<img src="{{ absolute_url(asset('build/icons/awchip.svg')) }}" alt="" width="32" height="32">
						{% set bfile_cnt = 0 %}
						{% if expansioncard.getExpansionCardBios() is not empty %}
							{% for bios in expansioncard.getExpansionCardBios() %}
								{% if bios.getFileName() is not null %}{% set bfile_cnt = bfile_cnt + 1 %}{% endif %}
							{% endfor %}
						{% endif %}
						<span>{{ bfile_cnt }} file{% if bfile_cnt != 1 %}s{% endif %} available</span>
					</div>
					{% if expansioncard.getExpansionCardBios() is not empty %}
						<div class="plain-list w300p table">
							<div class="list-entry centered head">
								<div>Version</div>
								<div>Note</div>
								<div>File</div>
							</div>
							{% for bios in expansioncard.getExpansionCardBios()|sort((a, b) => b.boardVersion <=> a.boardVersion) %}
							<div class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
								<div class="header-label">Version</div>
								<div>{{ bios.getVersion() }}</div>
								<div class="header-label">Note</div>
								<div>{{ bios.getNote() }}</div>
								<div class="header-label">File</div>
								<div>
									{% if bios.getFileName() is not null %}
										<a class="combo" href="{{ vich_uploader_asset(bios, 'romFile') }}">
											<img src="{{ absolute_url(asset('build/icons/dw.svg')) }}" alt="" width="16" height="16">
											{% set fname = bios.getFileName() %}
											<span>{{ fname|slice(0, fname|length - 27) ~ fname[fname|length - 4 :] }}</span>
										</a>
									{% endif %}
								</div>
							</div>
						</div>
						{% endfor %}
					{% endif %}
				</div>
			</div>
			<!-- DRIVERS -->
			<div class="show-downloads" id="sh-driver">
				{% include 'macros/drivers.html.twig' with {'entity': expansioncard.getDrivers()} %}
			</div>
			<!-- Documentation -->
			<div class="show-downloads" id="sh-docs">
				{% include 'macros/manuals.html.twig' with {'entity': expansioncard.getDocumentations()} %}
			</div>
		</div>
	</div>

	<!-- IMAGES -->
	<div class="show-images" id="sh-images">
	{% if expansioncard.getImages() is not empty %}
		{% set lpindex = 0 %}
		{% for image in expansioncard.getImages()|sort((a, b) => a.getFileName() <=> b.getFileName()) %}
			{% set lpindex = lpindex + 1 %}
			{% include 'macros/images.html.twig' with {'type':'expansionchip', 'entity': image, 'index': lpindex, 'length': expansioncard.getImages()|length} %}
		{% endfor %}
	{% else %}
		<div class="show-images">
			<img src={{ absolute_url(asset('build/images/missing/chip-missing.jpg')) }} title="no images available :(" style="width:100%;">
		</div>
	{% endif %}
	</div>

</div>
<div class="disclaimer">
	<p><b>Disclaimer</b></p>
	<p>The info found in this page might not be entirely correct. Check out <a href="{{ path('app_contributions') }}">this guide</a> to learn how you can improve it.</p>
</div>
{% endblock %}
