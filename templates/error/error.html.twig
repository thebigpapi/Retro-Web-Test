{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div style="padding-top:150px;margin:auto;width:70%;">
	{% if code == 404 %}
		<div style="width:60%;float:left;">
			<h1>Error {{ code }}: {{ codeText }}</h1>
			<p>The page you were looking for couldn't be found.</p>
			<p>You can go back to the homepage by clicking <a href="{{ path('app_homepage') }}">here</a>.</p>
		</div>
		<img style="" src="{{ absolute_url(asset('assets/images/search404.gif')) }}" alt="error">
	{% else %}
		<div style="width:60%;float:left;">
			<h1>Error {{ code }}: {{ codeText }}</h1>
			<p>Yikes! Something went terribly wrong.</p>
			<p>You can go back to the homepage by clicking <a href="{{ path('app_homepage') }}">here</a>.</p>
		</div>
		<img style="" src="{{ absolute_url(asset('assets/images/error.gif')) }}" alt="error">
		{% if is_granted('ROLE_ADMIN') %}
		<div style="background-color:#d43934;color:#e0e0e0;padding:5px 10px 5px;border-radius:4px;">
			<p>{{ message }}</p>
		</div>
		{% endif %}
	{% endif %}
	</div>
{% endblock %}
