{% extends 'base.html.twig' %}
{% from 'macros/largeFile.html.twig' import link as driverLink %}
{% from 'macros/largeFile.html.twig' import header as driverHeader %}

{% block title %}
	{{ cddrive.getNameWithManufacturer() }}
{% endblock %}
{% block metatags %}
	<meta name="description" content="Expansion chip:{{ cddrive.getNameWithManufacturer() }}">
{% endblock %}
{% block extra_javascripts %}
	<script src="/build/js/show.js" defer></script>
{% endblock %}

{% block opengraph %}
	{% apply spaceless %}
	<meta property="og:title" content="{{ cddrive.getNameWithManufacturer() }}">
	<meta property="og:description" content="Get expansion chip info, images and drivers for {{ cddrive.getNameWithManufacturer() }}!">
	{% if cddrive.getStorageDeviceImages() is not empty %}
		{% for image in cddrive.getStorageDeviceImages()|sort((a, b) => a.getFileName() <=> b.getFileName())|slice(0, 1) %}
			<meta name="twitter:image" content="{{ vich_uploader_asset(image, 'imageFile')}}">
			<meta property="og:image" content="{{ vich_uploader_asset(image, 'imageFile')}}">
		{% endfor %}
	{% else %}
		<meta name="twitter:image" content="{{ absolute_url(asset('build/images/missing/hdd-missing.jpg')) }}">
		<meta property="og:image" content="{{ absolute_url(asset('build/images/missing/hdd-missing.jpg')) }}">
	{% endif %}
	{% endapply %}
	<link rel="alternate" hreflang="x-default" href="{{ absolute_url(path('cd_drive_show', {id: cddrive.getId()})) }}"/>
{% endblock %}

{% block body %}
<!-- MANUF./NAME/PART NO. -->
<div class="title">{{ cddrive.getNameWithManufacturer() }}</div>
{% if cddrive.getStorageDeviceAliases() is not empty %}
<div class="tag-container" style="justify-content:center;padding-bottom:15px">
	<span style="width:100%;text-align:center">Also known as:</span>
	{% for alias in cddrive.getStorageDeviceAliases() %}
		<span class="text-block" >{{ alias.getFullAliasName() }}</span>
	{% endfor %}
</div>
{% endif %}

<div class="main-strip">
	<div class="internal-container">
		{% include 'macros/navbar.html.twig' with {'entity': cddrive, 'entityName': 'CdDrive', 'name': 'CD drive'} %}
		<div class="internal-content">
			<!-- DESCRIPRION -->
			<div class="show-general" id="sh-general">
				<div class="quick-spec-split">
					<div class="quick-spec-table">
						<!-- Interface -->
						<div class="quick-spec-head">
							<img src="{{ absolute_url(asset('build/icons/io.svg')) }}" alt="cpu" width="24" height="24">Interface{% if cddrive.getInterfaces()|length > 1 %}s{% endif %}
						</div>
						{% if cddrive.getInterfaces() is not empty %}
						<div class="tag-container">{% for interface in cddrive.getInterfaces() %}<span class="text-block">{{ interface.getName}}</span>{% endfor %}</div>
						{% else %}
						<div>Unknown</div>
						{% endif %}
						<!-- Size -->
						<div class="quick-spec-head">
							<img src="{{ absolute_url(asset('build/icons/dimension.svg')) }}" alt="" width="24" height="24">Form factor
						</div>
						<div>{{ cddrive.getPhysicalSize() }}</div>
						<!-- Tray -->
						<div class="quick-spec-head">
							<img src="{{ absolute_url(asset('build/icons/cd_drive.svg')) }}" alt="" width="24" height="24">Tray type
						</div>
						<div>{{ cddrive.getTrayType() }}</div>
					</div>
					<div class="quick-spec-table">
						<!-- CD read -->
						<div class="quick-spec-head">
							<img src="{{ absolute_url(asset('build/icons/cd.svg')) }}" alt="cdr" width="24" height="24">CD read speed
						</div>
						<div>{{ cddrive.getCdReadSpeed() ?: 'Unknown' }}</div>
						<!-- CD write -->
						<div class="quick-spec-head">
							<img src="{{ absolute_url(asset('build/icons/cd.svg')) }}" alt="cdw" width="24" height="24">CD write speed
						</div>
						<div>{{ cddrive.getCdWriteSpeed() ?: 'Unknown' }}</div>
						<!-- DVD read -->
						<div class="quick-spec-head">
							<img src="{{ absolute_url(asset('build/icons/dvd.svg')) }}" alt="dvdr" width="24" height="24">DVD read speed
						</div>
						<div>{{ cddrive.getDvdReadSpeed() ?: 'Unknown' }}</div>
						<!-- DVD write speed -->
						<div class="quick-spec-head">
							<img src="{{ absolute_url(asset('build/icons/dvd.svg')) }}" alt="dvdw" width="24" height="24">DVD write speed
						</div>
						<div>{{ cddrive.getDvdWriteSpeed() ?: 'Unknown' }}</div>
					</div>
				</div>
				{% include 'macros/notes.html.twig' with {'entity': cddrive} %}
				<!-- MANUALS -->
				<div class="show-downloads-group">
					{% set allDocs = cddrive.getStorageDeviceDocumentations() %}
					<div class="show-downloads-group-header">
						<img src="{{ absolute_url(asset('build/icons/manual.svg')) }}" alt="doc" width="32" height="32">
						<span>{{ allDocs|length }} document{% if allDocs|length != 1 %}s{% endif %} available</span>
					</div>
					{% if allDocs is not empty %}
					<div class="plain-list w300p table">
						<div class="list-entry centered head">
							<div>Language</div>
							<div>File</div>
						</div>
						{% for manual in allDocs|sort((a, b) => a.getLinkName <=> b.getLinkName) %}
						<div class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
							<div class="header-label">Language</div>
							<div>{{ manual.getLanguage().getName()}}</div>
							<div class="header-label">File</div>
							<div>
								<a class="combo" href="{{ vich_uploader_asset(manual, 'manualFile') }}">
									<img src="{{ absolute_url(asset('build/icons/dw.svg')) }}" alt="" width="16" height="16">
									<span>{{ manual.getLinkName() }}</span>
								</a>
							</div>
						</div>
						{% endfor %}
					</div>
					{% endif %}
				</div>
				<div id="index-datetime"><div class="div-datetime">Last updated <span class="perk-date">{{ cddrive.getLastEdited()|date("Y-m-d\\TH:i:s", "GMT") }}Z</span></div></div>
			</div>
		</div>
	</div>

	<!-- IMAGES -->
	<div class="show-images" id="sh-images">
	{% if cddrive.getStorageDeviceImages() is not empty %}
		{% set lpindex = 0 %}
		{% for image in cddrive.getStorageDeviceImages()|sort((a, b) => a.getFileName() <=> b.getFileName()) %}
			{% set lpindex = lpindex + 1 %}
			{% include 'macros/images.html.twig' with {'type':'expansionchip', 'entity': image, 'index': lpindex, 'length': cddrive.getStorageDeviceImages()|length} %}
		{% endfor %}
	{% else %}
		<div class="show-images">
			<img src={{ absolute_url(asset('build/images/missing/cdd-missing.jpg')) }} title="no images available :(" style="width:100%;">
		</div>
	{% endif %}
	</div>

</div>
<div class="disclaimer">
	<p><b>Disclaimer</b></p>
	<p>The info found in this page might not be entirely correct. Check out <a href="{{ path('app_contributions') }}">this guide</a> to learn how you can improve it.</p>
</div>
{% endblock %}
