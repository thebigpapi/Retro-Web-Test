{% extends 'base.html.twig' %}

{% block title %}Search hard drives - TRW{% endblock %}

{% block metatags %}
	<meta name="description" content="Search for a hard drive by name, manufacturer and part number.">
	<link rel="alternate" hreflang="x-default" href="{{ absolute_url(path('hddsearch')) }}"/>
{% endblock %}
{% block extra_javascripts %}
	<script src="/build/js/tom-select.complete.min.js" defer></script>
	<script src="/build/js/search.js" defer></script>
{% endblock %}
{% block subnav %}
<a href="{{ path('hddsearch') }}" class="nav-link active">
	<span class="navbar-label">Hard drive</span>
</a>
<a href="{{ path('cddsearch') }}" class="nav-link">
	<span class="navbar-label">Optical drive</span>
</a>
<a href="{{ path('fddsearch') }}" class="nav-link">
	<span class="navbar-label">Floppy drive</span>
</a>
{% endblock %}
{% block body %}
	{{ form_start(form, {'method': 'POST', 'name': 'search_hdd', 'action':path("hddsearch"), 'attr':{'onkeydown': 'return event.key != \'Enter\'', 'data-live-action': path('hddlivewrapper')}}) }}
	<fieldset id="search-fieldset">
		<div class="title">Search for a hard drive</div>
		<section class="search-form-grid" style="display:flex;justify-content:center;flex-wrap:wrap;">
			<div class="search-form-entry" >
				<label class="search-form-label" for="search_hddManufacturer" title="This is where you select the manufacturer name and enter the hard drive part number.">
					<span>Manufacturer and name</span>
					<img src="{{ absolute_url(asset('build/icons/help.svg')) }}" alt="" width="16" height="16">
				</label>
				<div class="search-form-widget">
					<div>{{ form_widget(form.hddManufacturer) }}</div>
					<div>{{ form_widget(form.name, {'attr': {'placeholder': 'Name or Part number (without manufacturer) ...'}}) }}</div>
				</div>
			</div>
			<div class="search-form-entry">
				<label class="search-form-label" for="search_capacity" title="By default, it is in Megabytes. Operators can be used (like '>128MB')">
					<span>Capacity</span>
					<img src="{{ absolute_url(asset('build/icons/help.svg')) }}" alt="" width="16" height="16">
				</label>
				<div class="search-form-widget">
					<div>{{ form_widget(form.capacity) }}</div>
				</div>
			</div>
		</section>
		{% include 'macros/searchitems.html.twig' with {'datatarget': 'harddrives', 'dataresetids': 'search_hddManufacturer', 'search_with_images' : true} %}
	</fieldset>
	{{ form_end(form, {render_rest: false}) }}
	<!-- Search results -->
	<section id="search_liveResults">
	{% if hdds is defined %}
		{% include 'harddrive/result.html.twig' with {'hdds': hdds, 'show_images': show_images, 'route': true} %}
	{% endif %}
	</section>
{% endblock %}
