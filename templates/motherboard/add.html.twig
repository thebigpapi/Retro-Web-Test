                </ul>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#motherboardBios-fields-list">
                        Add BIOS
                </button>
            </div>
</div>
<div class="add-side">
		<div class="addform">
				<div class="bar">
					<span style="padding-left:10px;">
						<b>Memory Support</b>
					</span>
				</div>
			<table>
				<tr>
					<td><div class="ram-type">{{ form_row(form.dramType) }}<div></td>
				</tr>
				<tr>
					<td>
						{{ form_label(form.motherboardMaxRams) }}
						{{ form_errors(form.motherboardMaxRams) }}
						<ul id="motherboardMaxRams-fields-list"
							data-prototype="{{ form_widget(form.motherboardMaxRams.vars.prototype)|e }}"
							data-widget-tags="{{ '<li></li>'|e }}"
							data-widget-counter="{{ form.motherboardMaxRams|length }}">
						{% for maxRam in form.motherboardMaxRams %}
							<li>
								{{ form_errors(maxRam) }}
								{{ form_widget(maxRam) }}
								<button type="button" class="delbutton">Delete</button>
							</li>
						{% endfor %}
						</ul>
						<button type="button"
							class="add-another-collection-widget"
							data-list-selector="#motherboardMaxRams-fields-list">
								Add maxRam
						</button>
					</td>
				</tr>
				<tr>
					<td>
						{{ form_label(form.cacheSize) }}
						{{ form_errors(form.cacheSize) }}
						<ul id="cacheSize-fields-list"
							data-prototype="{{ form_widget(form.cacheSize.vars.prototype)|e }}"
							data-widget-tags="{{ '<li></li>'|e }}"
							data-widget-counter="{{ form.cacheSize|length }}">
						{% for size in form.cacheSize %}
							<li>
								{{ form_errors(size) }}
								{{ form_widget(size) }}
								<button type="button" class="delbutton">Delete</button>
							</li>
						{% endfor %}
						</ul>
						<button type="button"
							class="add-another-collection-widget"
							data-list-selector="#cacheSize-fields-list">
								Add cache size
						</button>
					</td>
				</tr>
			</table>
		</div>
		<div class="clrs"></div>
		<div class="addform">
			<div class="bar">
					<span style="padding-left:10px;">
						<b>CPU support</b>
					</span>
			</div>
			<div class="proc-type">
                {{ form_row(form.processorPlatformType) }}
			</div>
				<div>
                {{ form_label(form.motherboardProcessor) }}
                {{ form_errors(form.motherboardProcessor) }}
                <ul id="motherboardProcessor-fields-list"
                    data-prototype="{{ form_widget(form.motherboardProcessor.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.motherboardProcessor|length }}">
                {% for processor in form.motherboardProcessor %}
                    <li>
                        {{ form_errors(processor) }}
                        {{ form_widget(processor) }}
                        <button type="button" class="delbutton">Delete</button>
                    </li>
                {% endfor %}
                </ul>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#motherboardProcessor-fields-list">
                        Add Processor
                </button>
				</div>
				<div>
                {{ form_label(form.coprocessors) }}
                {{ form_errors(form.coprocessors) }}
                <ul id="coprocessors-fields-list"
                    data-prototype="{{ form_widget(form.coprocessors.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.coprocessors|length }}">
                {% for coprocessor in form.coprocessors %}
                    <li>
                        {{ form_errors(coprocessor) }}
                        {{ form_widget(coprocessor) }}
                        <button type="button" class="delbutton">Delete</button>
                    </li>
                {% endfor %}
                </ul>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#coprocessors-fields-list">
                        Add Coprocessor
                </button>
				</div>
				<div>
                {{ form_label(form.cpuSpeed) }}
                {{ form_errors(form.cpuSpeed) }}
                <ul id="cpuSpeed-fields-list"
                    data-prototype="{{ form_widget(form.cpuSpeed.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.cpuSpeed|length }}">
                {% for speed in form.cpuSpeed %}
                    <li>
                        {{ form_errors(speed) }}
                        {{ form_widget(speed) }}
                        <button type="button" class="delbutton">Delete</button>
                    </li>
                {% endfor %}
                </ul>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#cpuSpeed-fields-list">
                        Add CPU Speed
                </button>
				</div>
		</div>
		<div class="clrs"></div>
		<div class="addform">
			<div class="bar">
					<span style="padding-left:10px;">
						<b>Notes</b>
					</span>
			</div>
			<div class="notes-field">
				{{ form_row(form.note) }}
			</div>
		</div>
</div>	
{{ form_end(form) }}
	

<script src="{% if app.request.attributes.get('_route') == "motherboard_edit" %}../{% endif %}../assets/jquery-1.7.2.min.js"></script>
<script>
    var buttons = document.getElementsByTagName("BUTTON");
    for(i = 0;i < buttons.length-1; i++)
    {
        if(buttons[i].className==="delbutton")
            buttons[i].addEventListener('click', function () { this.parentElement.remove(); });
    }
</script>
<script src="{% if app.request.attributes.get('_route') == "motherboard_edit" %}../{% endif %}../assets/add-collection-widget.js"></script>

{% endblock %}