{% extends 'admin/header.html.twig' %}

{% block title %}Add motherboard{% endblock %}

{% block body %}
<div class="title">
	<b>Add a new motherboard</b>
</div>
{{ form_start(form, {'method': 'POST'}) }}
<div class="butn" style="padding-top:10px;padding-bottom:10px;">{{ form_row(form.save) }}</div>

<div class="add-side">
		<div class="addform">
			<div class="bar">
				<span style="padding-left:10px;">
					<b>General characteristics</b>
				</span>
			</div>
			<table>
				<tr>
					<td><div class="editasset0">{{ form_row(form.manufacturer) }}</div></td>
				</tr>
				<tr>
					<td><div class="editasset0">{{ form_row(form.name) }}</div></td>
				</tr>
				<tr>
					<td><div class="editasset0">{{ form_row(form.formFactor) }}</div></td>
				</tr>
				<tr>
					<td><div class="editasset0">{{ form_row(form.dimensions) }}</div></td>
				</tr>
				<tr>
					<td><div class="editasset0">{{ form_row(form.chipset) }}</div></td>
				</tr>
				<tr>
					<td><div class="editasset0">{{ form_row(form.videoChipset) }}</div></td>
				</tr>
				<tr>
					<td><div class="editasset0">{{ form_row(form.maxVideoRam) }}</div></td>
				</tr>
				<tr>
					<td><div class="editasset0">{{ form_row(form.audioChipset) }}</div></td>
				</tr>
			</table>
		</div>
			<div class="clrs"></div>
			
			<div class="addform">
				<div class="bar">
					<span style="padding-left:10px;">
						<b>{{ form_label(form.motherboardExpansionSlots) }}</b>
					</span>
				</div> 
                {{ form_errors(form.motherboardExpansionSlots) }}
				<div>
                <ul id="motherboardExpansionSlots-fields-list"
                    data-prototype="{{ form_widget(form.motherboardExpansionSlots.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.motherboardExpansionSlots|length }}">
                {% for slot in form.motherboardExpansionSlots %}
                    <li>
                        {{ form_errors(slot) }}
                        {{ form_widget(slot) }}
                        <button type="button" class="delbutton">Delete</button>
                    </li>
                {% endfor %}
                </ul></div>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#motherboardExpansionSlots-fields-list">
                        Add Expansion slot
                </button>
			</div>
			<div class="clrs"></div>
			
			<div class="addform">
				<div class="bar">
					<span style="padding-left:10px;">
						<b>{{ form_label(form.motherboardIoPorts) }}</b>
					</span>
				</div>
                {{ form_label(form.motherboardIoPorts) }}
                {{ form_errors(form.motherboardIoPorts) }}
				<div>
                <ul id="motherboardIoPorts-fields-list"
                    data-prototype="{{ form_widget(form.motherboardIoPorts.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.motherboardIoPorts|length }}">
                {% for port in form.motherboardIoPorts %}
                    <li>
                        {{ form_errors(port) }}
                        {{ form_widget(port) }}
                        <button type="button" class="delbutton">Delete</button>
                    </li>
                {% endfor %}
                </ul></div>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#motherboardIoPorts-fields-list">
                        Add I/O port
                </button>
			</div>
			<div class="clrs"></div>
			
			<div class="addform">
			<div class="bar">
					<span style="padding-left:10px;">
						<b> {{ form_label(form.knownIssues) }}</b>
					</span>
			</div>
                {{ form_label(form.knownIssues) }}
                {{ form_errors(form.knownIssues) }}
                <ul id="knownIssues-fields-list"
                    data-prototype="{{ form_widget(form.knownIssues.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.knownIssues|length }}">
                {% for issue in form.knownIssues %}
                    <li>
                        {{ form_errors(issue) }}
                        {{ form_widget(issue) }}
                        <button type="button" class="delbutton">Delete</button>
                    </li>
                {% endfor %}
                </ul>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#knownIssues-fields-list">
                        Add Known Issue
                </button>
			</div>
			<div class="clrs"></div>
			
			<div class="addform">
			<div class="bar">
					<span style="padding-left:10px;">
						<b> {{ form_label(form.images) }}</b>
					</span>
			</div>
                {{ form_label(form.images) }}
                {{ form_errors(form.images) }}
                <ul id="images-fields-list"
                    data-prototype="{{ form_widget(form.images.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.images|length }}">
                {% for image in form.images %}
                    <li>
                        {{ form_errors(image) }}
                        {{ form_widget(image) }}
                        <button type="button" class="delbutton">Delete</button>
                    </li>
                {% endfor %}
                </ul>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#images-fields-list">
                        Add Image
                </button>
            </div>
			<div class="clrs"></div>
			
			<div class="addform">
			<div class="bar">
					<span style="padding-left:10px;">
						<b> {{ form_label(form.manuals) }}</b>
					</span>
			</div>
                
                {{ form_errors(form.manuals) }}
                <ul id="manuals-fields-list"
                    data-prototype="{{ form_widget(form.manuals.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.manuals|length }}">
                {% for manual in form.manuals %}
                    <li>
                        {{ form_errors(manual) }}
						
							{{ form_widget(manual) }}
						
                        <button type="button" class="delbutton">Delete</button>
                    </li>
                {% endfor %}
                </ul>
                <button type="button"
                    class="add-another-collection-widget"
                    data-list-selector="#manuals-fields-list">
                        Add Manual
                </button>
            </div>
			<div class="clrs"></div>
			
			<div class="addform">
			<div class="bar">
					<span style="padding-left:10px;">
						<b> {{ form_label(form.motherboardBios) }}</b>
					</span>
			</div>
                {{ form_label(form.motherboardBios) }}
                {{ form_errors(form.motherboardBios) }}
                <ul id="motherboardBios-fields-list"
                    data-prototype="{{ form_widget(form.motherboardBios.vars.prototype)|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ form.motherboardBios|length }}">
                {% for bios in form.motherboardBios %}
                    <li>
