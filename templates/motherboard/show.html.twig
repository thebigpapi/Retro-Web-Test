{% extends 'base.html.twig' %}
{% from 'macros/largeFile.html.twig' import link as driverLink %}
{% from 'macros/largeFile.html.twig' import header as driverHeader %}


{% block title %}
	{{ motherboard.getPrettyTitle() }} - The Retro Web
{% endblock %}

{% block metatags %}
	<meta name="description" content="{{ motherboard.getMetaDescription() }}">
	<link rel="canonical" hreflang="x-default" href="{{ absolute_url(path('motherboard_show_slug', {slug: motherboard.getSlug()})) }}"/>
	<link rel="alternate" hreflang="x-default" href="{{ absolute_url(path('motherboard_show', {id: motherboard.getId()})) }}"/>
{% endblock %}

{% block opengraph %}
	{% apply spaceless %}
	<meta name="twitter:card" content="summary">
	<meta property="og:site_name" content="The Retro Web">
	<meta property="og:type" content="website">
	<meta name="twitter:title" content="{{ motherboard.getPrettyTitle() }}">
	<meta property="og:title" content="{{ motherboard.getPrettyTitle() }}">
	<meta name="twitter:description" content="{{ motherboard.getMetaDescription() }}">
	<meta property="og:description" content="{{ motherboard.getMetaDescription() }}">
	<meta property="og:url" content="{{ absolute_url(path('motherboard_show_slug', {slug: motherboard.getSlug()})) }}">
	{% if motherboard.getImages() is not empty %}
		{% for image in motherboard.getImages()|filter(a => a.motherboardImageType.id in [1, 2])|sort((a, b) => a.getFileName() <=> b.getFileName())|sort((a, b) => b.motherboardImageType <=> a.motherboardImageType)|slice(0, 1) %}
			<meta name="twitter:image" content="{{ vich_uploader_asset(image, 'imageFile')}}">
			<meta property="og:image" content="{{ vich_uploader_asset(image, 'imageFile')}}">
		{% endfor %}
	{% else %}
		<meta name="twitter:image" content="{{ absolute_url(asset('build/images/motherboard/image-missing.webp')) }}">
		<meta property="og:image" content="{{ absolute_url(asset('build/images/motherboard/image-missing.webp')) }}">
	{% endif %}
	{% endapply %}
{% endblock %}

{% block body %}
<!-- TITLE/ALIASES -->
<div class="title">
	{{ motherboard.getManufacturer() ? motherboard.getManufacturer().getName() : 'Unknown' }} {{ motherboard.getName() }}
</div>
{% if motherboard.getMotherboardAliases() is not empty %}
<div class="tag-container" style="justify-content:center;padding-bottom:15px">
	<span style="width:100%;text-align:center">Also known as:</span>
	{% for alias in motherboard.getMotherboardAliases() %}
		<span class="text-block" >{% if alias.getManufacturer() is not null %}{{ alias.getManufacturer().getName() }}{% else %}Unknown{% endif %}&nbsp;{{ alias.getName() }}</span>
	{% endfor %}
</div>
{% endif %}
<div class="main-strip">
	<div class="internal-container">
		{% include 'macros/navbar.html.twig' with {'entity': motherboard, 'entityName': 'Motherboard', 'name': 'board'} %}
		<!-- GENERAL -->
		<div class="internal-content">
			<div class="show-general" id="sh-general">
			<div class="quick-spec-split">
				<div class="quick-spec-table">
					<!-- Chipset -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/show/chipset.svg')) }}" alt="chip" width="24" height="24">Chipset
					</div>
					{% if motherboard.getChipset() is not empty %}
						<div><a href="{{ path('chipset_show', {id: motherboard.getChipset().getId()}) }}">{{ motherboard.getChipset().getFullName() }}</a></div>
					{% else %}
					<div>Unknown</div>
					{% endif %}
					<!-- CPU socket -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/show/cpu_pins.svg')) }}" alt="cpu" width="24" height="24">CPU socket{% if motherboard.getCpuSockets()|length > 1 %}s{% endif %}
					</div>
					{% if motherboard.getCpuSockets() is not empty %}
					<div class="tag-container">{% for socket in motherboard.getCpuSockets() %}<span class="text-block">{{ socket.getNameAndType}}</span>{% endfor %}</div>
					{% else %}
					<div>Unknown</div>
					{% endif %}
					<!-- CPU family -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/show/486.svg')) }}" alt="cpu" width="24" height="24">CPU family
					</div>
					{% if motherboard.getProcessorPlatformTypes() is not empty %}
					<div class="tag-container">{% for platform in motherboard.getProcessorPlatformTypes() %}<span class="text-block">{{ platform.getName() }}</span>{% endfor %}</div>
					{% else %}
					<div>Unknown</div>
					{% endif %}
					<!-- FSB speed -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/show/speed.svg')) }}" alt="speed" width="24" height="24">FSB speed{% if motherboard.getCpuSpeed()|length > 1 %}s{% endif %}
					</div>
					{% if motherboard.getCpuSpeed() is not empty %}
					<div class="tag-container">{% for frequency in motherboard.getCpuSpeed()|sort((a, b) => a.value <=> b.value) %}<span class="text-block">{{ frequency.getValueWithUnit() }}</span>{% endfor %}</div>
					{% else %}
					<div>Unknown</div>
					{% endif %}
					<!-- Cache -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/show/chip.svg')) }}" alt="chip" width="24" height="24">Cache
					</div>
					{% if motherboard.getCacheSize() is not empty %}
					<div class="tag-container">{% for cache in motherboard.getCacheSize()|sort((a, b) => a.value <=> b.value) %}<span class="text-block">{{ cache.getValueWithUnit()}}</span>{% endfor %}</div>
					{% else %}
					<div>None/Integrated in the CPU</div>
					{% endif %}
				</div>
				<div class="quick-spec-table">
					<!-- Supported RAM types -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/admin/ram.svg')) }}" alt="ram" width="24" height="24">RAM type{% if motherboard.getDramType()|length > 1 %}s{% endif %}
					</div>
					{% if motherboard.getDramType() is not empty %}
					<div class="tag-container">{% for dram in motherboard.getDramType() %}<span class="text-block">{{ dram.getName() }}</span>{% endfor %}</div>
					{% else %}
					<div>Unknown</div>
					{% endif %}
					<!-- Max system RAM -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/show/ram_multi.svg')) }}" alt="ram" width="24" height="24">Max RAM size
					</div>
					{% if motherboard.getMotherboardMaxRams() is not empty %}
					<div class="tag-container">{% for maxRam in motherboard.getMotherboardMaxRams() %}<span class="text-block">{{ maxRam.getMaxRam().getValueWithUnit()}}{% if maxRam.getNote() is not null %}<i>({{ maxRam.getNote()}})</i>{% endif %}</span>{% endfor %}</div>
					{% else %}
					<div>Unknown</div>
					{% endif %}
					<!-- PSU connectors -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/show/power.svg')) }}" alt="pwr" width="24" height="24">PSU connector
					</div>
					{% if motherboard.getPsuConnectors() is not empty %}
					<div class="tag-container">{% for psu in motherboard.getPsuConnectors() %}<span class="text-block">{% if psu.getWebsite() is not null %}<a href="{{ psu.getWebsite() }}">{{ psu.getName() }}</a>{% else %}{{ psu.getName() }}{% endif %}</span>{% endfor %}</div>
					{% else %}
					<div>Unknown</div>
					{% endif %}
					<!-- Form factor -->
					<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/show/motherboard.svg')) }}" alt="mobo" width="24" height="24">Form factor</div>
					<div>{{ motherboard.getFormFactor() ? motherboard.getFormFactor().getName() : 'Unknown' }}</div>
					<!-- Dimensions -->
					<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/show/dimension.svg')) }}" alt="dim" width="24" height="24">Dimensions</div>
					<div>{{ motherboard.getDimensions() ?: 'Unknown' }}</div>
				</div>
			</div>
				<div class="full-spec">
					<div class="full-spec-head"><img src="{{ absolute_url(asset('build/icons/admin/connector.svg')) }}" alt="conn" width="24" height="24"><b>I/O ports</b></div>
					<div class="list-table">
						{% if motherboard.getMotherboardIoPorts() is not empty %}
							{% for port in motherboard.getMotherboardIoPorts()|sort %}
								<div class="list-table-head"><b>{{ port.getCount() }}x&nbsp;</b></div><div>{{ port.getIoPort().getName() }}</div>
							{% endfor %}
						{% else %}<div class="list-table-head"></div><div>N/A</div>{% endif %}
					</div>

					<div class="full-spec-head"><img src="{{ absolute_url(asset('build/icons/show/card.svg')) }}" alt="card" width="24" height="24"><b>Expansion slots</b></div>
					<div class="list-table">
						{% if motherboard.getMotherboardExpansionSlots() is not empty %}
							{% for slot in motherboard.getMotherboardExpansionSlots()|sort %}
								<div class="list-table-head"><b>{{ slot.getCount() }}x&nbsp;</b></div><div>{{ slot.getExpansionSlot().getName() }}</div>
							{% endfor %}
						{% else %}<div class="list-table-head"></div><div>N/A</div>{% endif %}
					</div>
				</div>
				{% if motherboard.getKnownIssues() is not empty %}
				<div style="padding-top:10px;padding-left: 5px;">
					<h3><b>Known issues:</b></h3>
					<div class="notes">
{% apply markdown_to_html %}{% for issue in motherboard.getKnownIssues()|sort %}
* {{ issue.getName() }}

{{ issue.getDescription() }}

{% endfor %}{% endapply %}
					</div>
				</div>
				{% endif %}
				{% if motherboard.note is not null %}
				<div style="padding-top:10px;padding-left: 5px;">
					<h3><b>Notes</b></h3>
					<div class="notes">{% apply markdown_to_html %}{{ motherboard.note }}{% endapply %}</div>
				</div>
				{% endif %}
				<div id="index-datetime" data-controller="datetime"><div class="div-datetime">Last updated <span class="perk-date">{{ motherboard.getLastEdited()|date("Y-m-d\\TH:i:s", "GMT") }}Z</span></div></div>
				<span><small><i>&nbsp;TRW ID: {{motherboard.getId()}}</i></small></span>
			</div>

			<!-- Chips -->
			<div class="show-expchips" id="sh-expchips">
				<div class="quick-spec-table">
					<!-- Chipset -->
					<div class="quick-spec-head">
						<img src="{{ absolute_url(asset('build/icons/show/chipset.svg')) }}" alt="chipset" width="24" height="24">Chipset
					</div>
					{% if motherboard.getChipset() is not empty %}
						<div><a href="{{ path('app_homepage') }}chipsets/{{ motherboard.getChipset().getId()}}">{{ motherboard.getChipset().getFullName() }}</a></div>
					{% else %}<div>Unknown</div>{% endif %}
					<!-- Expansion Chips -->
					{% if motherboard.getExpansionChips() is not empty %}
						{% for chip in motherboard.getExpansionChips()|filter(a => a.getType().getName() == "Chipset part")%}
							{% if loop.first %}<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/show/chipset.svg')) }}" alt="chip" width="24" height="24">Chipset parts</div><div class="tag-container">{% endif %}
								<a href="{{ path('expansion_chip_show', {id: chip.getId()}) }}"><span class="text-block">{{ chip.getNameWithManufacturer() }}</span></a>
							{% if loop.index == motherboard.getExpansionChips()|filter(a => a.getType().getName() == "Chipset part")|length %}</div>{% endif %}
						{% endfor %}
						{% for type in expansionchiptype %}
							{% for chip in motherboard.getExpansionChips()|filter(a => a.getType().getName() !=  "Chipset part")|filter(a => a.getType().getName() == type.getName())%}
								{% if loop.first %}<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/show/chip.svg')) }}" alt="chip" width="24" height="24">{{chip.getType().getName()}} chips</div><div class="tag-container">{% endif %}
								<a href="{{ path('expansion_chip_show', {id: chip.getId()}) }}"><span class="text-block">{{ chip.getNameWithManufacturer() }}</span></a>
								{% if loop.index == motherboard.getExpansionChips()|filter(a => a.getType().getName() == type.getName())|length %}</div>{% endif %}
							{% endfor %}
						{% endfor %}
					{% endif %}
					<!-- Max video RAM -->
					{% if motherboard.getMaxVideoRam()  is not empty %}
					<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/show/ram_multi.svg')) }}" alt="ram" width="24" height="24">Max VRAM size</div>
					<div>{{  motherboard.getMaxVideoRam().getValueWithUnit() }}</div>
					{% endif %}
					{% if motherboard.getMaxCpu() > 1 %}
					<div class="quick-spec-head"><img src="{{ absolute_url(asset('build/icons/show/ram_multi.svg')) }}" alt="ram" width="24" height="24">Multi CPU support</div>
					<div>yes ({{ motherboard.getMaxCpu()}} CPUs)</div>
					{% endif %}
				</div>
			</div>

			<!-- DOWNLOADS -->
			<div class="show-downloads" id="sh-downloads">
				<!-- DRIVERS -->
				<div class="show-downloads-group">
					<div class="show-downloads-group-header">
						<img src="{{ absolute_url(asset('build/icons/show/hardware.svg')) }}" alt="drv" width="32" height="32">
						<span>{{ motherboard.getAllDrivers.count() }} driver{% if motherboard.getAllDrivers.count() != 1 %}s{% endif %} available</span>
					</div>
					{% if motherboard.getAllDrivers() is not empty %}
					<div class="plain-list w300p table">
						<div class="list-entry centered head">
							<div>Language</div>
							<div>Media type</div>
							<div>OS support</div>
							<div>Name</div>
							<div>Version</div>
						</div>
						{% for driver in motherboard.getAllDrivers() %}
						<div class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
							<div class="header-label">Language</div>
							<div>
								<div class="tag-container">
								{% for lang in driver.largeFile.getLanguages() %}
								<span class="combo">
									<img src="{{ asset('build/icons/language/' ~ lang.getIsoCode ~ '.svg') }}" alt="{{lang.getOriginalName()}}" title="{{lang.getOriginalName()}}" class="lang-flag{% if loop.length > 4 %}-lrg{% endif %}">
								</span>
								{% endfor %}
								</div>
							</div>
							<div class="header-label">Media type</div>
							<div>
								{% for relation in driver.largeFile.getMediaTypeFlags() %}
								<span class="combo">
									<b>{{relation.getCount()}}x</b>
									<img src="{{ vich_uploader_asset(relation.getMediaTypeFlag(), 'icon')}}" alt="{{relation.getMediaTypeFlag().getName()}}" title="{{relation.getMediaTypeFlag().getName()}}" width="32">
								</span>
								{% endfor %}
							</div>
							<div class="header-label">OS support</div>
							<div>
								<div class="tag-container">
								{% for os in driver.largeFile.getOsFlags()|sort((a, b) => a.getName <=> b.getName)|sort((a, b) => a.getVersion <=> b.getVersion) %}
								<span class="text-block">
									<img src="{{ asset('build/icons/os/' ~ os.getVersion ~ '.svg') }}" alt="{{os.getVersion}}"  width="16">
									<span>{{os.getName()}}</span>
								</span>
								{% endfor %}
								</div>
							</div>
							<div class="header-label">Name</div>
							<div><a href="{{ path("driver_show", {id: driver.largeFile.getId()}) }}">{{driver.largeFile.getName()}}</a></div>
							<div class="header-label">Version</div>
							<div>
								<a class="combo" href="{{ vich_uploader_asset(driver.largeFile, 'file')}}">
									<img src="{{ absolute_url(asset('build/icons/dw.svg')) }}" alt="" width="16">
									<span>{{ driver.largeFile.getFileVersion() ? driver.largeFile.getFileVersion() : 'Unknown' }}</span>
								</a>
							</div>
						</div>
						{% endfor %}
					</div>
					{% else %}
					{% endif %}
				</div>

				<!-- BIOSes -->
				<div class="show-downloads-group">
					<div class="show-downloads-group-header">
						<img src="{{ absolute_url(asset('build/icons/show/chip.svg')) }}" alt="" width="32" height="32">
						{% set bfile_cnt = 0 %}
						{% if motherboard.getMotherboardBios() is not empty %}
							{% for bios in motherboard.getMotherboardBios() %}
								{% if bios.getFileName() is not null %}{% set bfile_cnt = bfile_cnt + 1 %}{% endif %}
							{% endfor %}
						{% endif %}
						<span>{{ bfile_cnt }} BIOS image{% if bfile_cnt != 1 %}s{% endif %} available</span>
					</div>
					{% if motherboard.getMotherboardBios() is not empty %}
					<div class="plain-list w300p table">
						<div class="list-entry centered head">
							<div>Manuf.</div>
							<div>POST string</div>
							<div>Note</div>
							<div>Core Ver.</div>
							<div>BIOS Ver.</div>
						</div>
						{% for bios in motherboard.getMotherboardBios()|sort((a, b) => b.boardVersion <=> a.boardVersion)|sort((a, b) => a.manufacturer <=> b.manufacturer) %}
						<div class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
							<div class="header-label">Manuf.</div>
							<div>{{ bios.getManufacturer().getName() }}</div>
							<div class="header-label">POST string</div>
							<div class="monospace">{{ bios.getPostString() }}</div>
							<div class="header-label">Note</div>
							<div>{{ bios.getNote() }}</div>
							<div class="header-label">Core version</div>
							<div>{{ bios.getCoreVersion() }}</div>
							<div class="header-label">BIOS version</div>
							<div>
								{% if bios.getFileName() is not null %}
									<a class="combo" href="{{ vich_uploader_asset(bios, 'romFile') }}">
										<img src="{{ absolute_url(asset('build/icons/dw.svg')) }}" alt="" width="16" height="16">
										<span>
										{% if bios.getBoardVersion() is not null %}
											{{ bios.getBoardVersion() }}
										{% else %}
											[unknown]
										{% endif %}
										</span>
									</a>
								{% else %}
									{{ bios.getBoardVersion() }}
								{% endif %}
							</div>
						</div>
						{% endfor %}
					</div>
					{% endif %}
				</div>

				<!-- MANUALS -->
				<div class="show-downloads-group">
					<div class="show-downloads-group-header">
						<img src="{{ absolute_url(asset('build/icons/show/manual.svg')) }}" alt="doc" width="32" height="32">
						<span>{{ motherboard.getManuals.count() }} document{% if motherboard.getManuals.count() != 1 %}s{% endif %} available</span>
					</div>
					{% if motherboard.getManuals() is not empty %}
					<div class="plain-list w300p table">
						<div class="list-entry centered head">
							<div>Language</div>
							<div>File</div>
						</div>
						{% for manual in motherboard.getManuals()|sort((a, b) => a.getLinkName <=> b.getLinkName) %}
						<div class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
							<div class="header-label">Language</div>
							<div>{{ manual.getLanguage().getName()}}</div>
							<div class="header-label">File</div>
							<div>
								<a class="combo" href="{{ vich_uploader_asset(manual, 'manualFile') }}">
									<img src="{{ absolute_url(asset('build/icons/dw.svg')) }}" alt="" width="16" height="16">
									<span>{{ manual.getLinkName() }}</span>
								</a>
							</div>
						</div>
						{% endfor %}
					</div>
					{% endif %}
				</div>

				<!-- MISC FILES -->
				<div class="show-downloads-group">
					<div class="show-downloads-group-header">
						<img src="{{ absolute_url(asset('build/icons/show/miscfile.svg')) }}" alt="doc" width="32" height="32">
						<span>{{ motherboard.getMiscFiles.count() }} other file{% if motherboard.getMiscFiles.count() != 1 %}s{% endif %} available</span>
					</div>
					{% if motherboard.getMiscFiles() is not empty %}
					<div class="plain-list w300p table">
						<div class="list-entry centered head">
							<div>File</div>
						</div>
						{% for miscfile in motherboard.getMiscFiles()|sort((a, b) => a.getLinkName <=> b.getLinkName) %}
						<div class="list-entry centered {% if loop.index is divisible by(2) %}alt{% endif %}">
							<div class="header-label">File</div>
							<div>
								<a class="combo" href="{{ vich_uploader_asset(miscfile, 'manualFile') }}">
									<img src="{{ absolute_url(asset('build/icons/dw.svg')) }}" alt="" width="16" height="16">
									<span>{{ miscfile.getLinkName() }}</span>
								</a>
							</div>
						</div>
						{% endfor %}
					</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
	<!-- IMAGES -->
	<div class="show-images" id="sh-images">
	{% if motherboard.getImages() is not empty %}
		{% for image in motherboard.getImages()|sort((a, b) => a.getFileName() <=> b.getFileName())|sort((a, b) => a.motherboardImageType <=> b.motherboardImageType) %}
			{% include 'macros/images.html.twig' with {'type':'motherboard', 'entity': image, 'index': loop.index, 'length': loop.length} %}
		{% endfor %}
	{% else %}
		<div class="show-image">
			<img src={{ absolute_url(asset('build/images/motherboard/image-missing.webp')) }} title="no images available :(" style="width:100%;">
		</div>
	{% endif %}
	</div>
</div>
<div class="disclaimer">
	<p><b>Disclaimer</b></p>
	<p>The info found in this page might not be entirely correct. Check out <a href="{{ path('app_contributions') }}">this guide</a> to learn how you can improve it.</p>
</div>
{% endblock %}