{% extends 'base.html.twig' %}
{% block title %}Search results - TRW{% endblock %}

{% block metatags %}
	<meta name="description" content="Search for a chipset by name, manufacturer, part number and more.">
{% endblock %}

{% block body %}
	<div class="title">
		<b>{% trans %}Search results{% endtrans %}</b>
	</div>
	<p style="text-align:center;padding-top:10px;">
		<i>{{ chipset_count }} chipsets</i>
	</p>
	{% if chipsets is not empty %}
		<div class="results">
			{{ knp_pagination_render(chipsets, 'macros/pagination.html.twig') }}
			{% if show_images %}
				{% for chipset in chipsets %}
					<span class="image-block"><span>
					{% for chipPart in chipset.getChipsetParts()|slice(0, 1) %}
						{% if chipPart.getImages() is not empty %}
							{% for image in chipPart.getImages()|slice(0, 1) %}
								<a href="{{ vich_uploader_asset(image, 'imageFile')}}" class="glightbox">
									<img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('motherboard_show_thumb') }}" alt="" title="{% if image.description %}{{ image.description }}{% endif %}"></a>
							{% endfor %}
						{% endif %}
						<span><a class="result-link" href="{{ path("chipset_show", {id: chipset.getId()}) }}">{{ chipset.getMainChipWithManufacturer() }}</a></span>
					{% endfor %}
					</span></span>
				{% endfor %}
			{% else %}
				<ul>{% for chipset in chipsets %}
					<li><a class="result-link" href="{{ path("chipset_show", {id: chipset.getId()}) }}">{{ chipset.getMainChipWithManufacturer() }}</a></li>
				{% endfor %}</ul>
			{% endif %}
			{{ knp_pagination_render(chipsets, 'macros/pagination.html.twig') }}
		</div>
	{% endif %}
{% endblock %}
